# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-argustv
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=1
pkgdesc="Kodi's ARGUS TV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.argustv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.argustv.tar.gz::https://github.com/kodi-pvr/pvr.argustv/archive/a0d0e3c6f4fba16cf2256b58ade58e0a46d7e99d.tar.gz")
sha512sums=('816d907deeb90a13127d845cd4f908d459c415f74995e9e1901d1142ffffade30227c82ae7a0068cc367cd91838742e15e85986697ed18a38f6f76e550769eb1')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.argustv-a0d0e3c6f4fba16cf2256b58ade58e0a46d7e99d"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.argustv-a0d0e3c6f4fba16cf2256b58ade58e0a46d7e99d/build"
  make DESTDIR="$pkgdir" install
}
