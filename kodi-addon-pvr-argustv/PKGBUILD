# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-argustv
pkgbase=${pkgname}
pkgver=3.5.4
pkgrel=1
pkgdesc="Kodi's ARGUS TV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.argustv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.argustv.tar.gz::https://github.com/kodi-pvr/pvr.argustv/archive/83aa1e9c588b80cdef9b2bc062e554b7ba2e609d.tar.gz")
sha512sums=('5fa738721fe4e10c5f7315ed9ac0d91209f16eedb67538880722484430e4f1f4962c8050174c045d0cc1a43367ae02028122ffd84fe5680d220acca6b4cc8a72')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.argustv-83aa1e9c588b80cdef9b2bc062e554b7ba2e609d"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.argustv-83aa1e9c588b80cdef9b2bc062e554b7ba2e609d/build"
  make DESTDIR="$pkgdir" install
}
