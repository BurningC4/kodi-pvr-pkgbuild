# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-argustv
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=1
pkgdesc="Kodi's ARGUS TV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.argustv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.argustv.tar.gz::https://github.com/kodi-pvr/pvr.argustv/archive/a0d0e3c6f4fba16cf2256b58ade58e0a46d7e99d.tar.gz")
sha512sums=('1deb86ff624121fff041a8e8cad167a77eaae42b29f58234a22b83d9d8b9d85165d8e05123858fad45a349f92cd77a3232e378d10a2e0c6bda0616d3489bc21b')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.argustv-a0d0e3c6f4fba16cf2256b58ade58e0a46d7e99d"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.argustv-a0d0e3c6f4fba16cf2256b58ade58e0a46d7e99d/build"
  make DESTDIR="$pkgdir" install
}
