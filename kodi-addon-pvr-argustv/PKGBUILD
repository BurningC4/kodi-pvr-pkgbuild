# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-argustv
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=6
pkgdesc="Kodi's ARGUS TV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.argustv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.argustv.tar.gz::https://github.com/kodi-pvr/pvr.argustv/archive/8873be1d9446041f380805cf0a4439076108bb34.tar.gz")
sha512sums=('7b377f4facea41cd665671c9693d18d36d0d5edc5776de65d56217aea1a9381b8a9f5ba67e0786237de896418b656edbff1d8df4b9aad3daf2d47fe8f1cceb30')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.argustv-8873be1d9446041f380805cf0a4439076108bb34"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.argustv-8873be1d9446041f380805cf0a4439076108bb34/build"
  make DESTDIR="$pkgdir" install
}
