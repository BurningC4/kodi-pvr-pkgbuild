# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-argustv
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=5
pkgdesc="Kodi's ARGUS TV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.argustv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.argustv.tar.gz::https://github.com/kodi-pvr/pvr.argustv/archive/eca49741ae547c5b159cdafdfaf7189da625044e.tar.gz")
sha512sums=('d69409fe49b410f9ae1945221e2f9308980246262fe7eaee88a885b380eb975970d6856f057085048e6a67e1ca4524a40704ecaac496041a03ef2a2a2f8980fe')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.argustv-eca49741ae547c5b159cdafdfaf7189da625044e"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.argustv-eca49741ae547c5b159cdafdfaf7189da625044e/build"
  make DESTDIR="$pkgdir" install
}
