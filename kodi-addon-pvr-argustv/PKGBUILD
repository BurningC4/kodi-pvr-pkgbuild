# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-argustv
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=4
pkgdesc="Kodi's ARGUS TV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.argustv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.argustv.tar.gz::https://github.com/kodi-pvr/pvr.argustv/archive/15e8a5e8cf2d92c3e7b7159717e4be8f2dedc845.tar.gz")
sha512sums=('0ccce94061f0bd3ca29ce15f338802a6d7288f7db12a2d269ad056175a277c7554830aecd4c84ac2341ab8e93e264d11dafbeab2685fb1fdd950a12aa0c86032')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.argustv-15e8a5e8cf2d92c3e7b7159717e4be8f2dedc845"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.argustv-15e8a5e8cf2d92c3e7b7159717e4be8f2dedc845/build"
  make DESTDIR="$pkgdir" install
}
