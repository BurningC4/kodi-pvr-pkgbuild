# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-argustv
pkgbase=${pkgname}
pkgver=19.2.1
pkgrel=2
pkgdesc="Kodi's ARGUS TV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.argustv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.argustv.tar.gz::https://github.com/kodi-pvr/pvr.argustv/archive/2162c82f6158b2e2b563f2d59e19cfde407ab938.tar.gz")
sha512sums=('9394a79374baa98f2ac8833e192e866ecf8b2cc1f602c392479fa8ef8a746a3a13412859b05ce2cca8cf5e0d11a5fd4ccc5131366f3c2b800635882de9710f67')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.argustv-2162c82f6158b2e2b563f2d59e19cfde407ab938"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.argustv-2162c82f6158b2e2b563f2d59e19cfde407ab938/build"
  make DESTDIR="$pkgdir" install
}
