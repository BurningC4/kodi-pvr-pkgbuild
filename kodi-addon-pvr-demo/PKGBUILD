# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-demo
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=4
pkgdesc="Demo PVR for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.demo"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.demo.tar.gz::https://github.com/kodi-pvr/pvr.demo/archive/6fa54d94db8e9b90b811d46460ff5bf495be056b.tar.gz")
sha512sums=('6a55a9872d09c8d10398ca4eab7a3e46e007dbc21d56ee19b85156ba269fd998b9937ba70099312073d66c4b47f0c9161a9994730d0518f5866077e4d7f55b9c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.demo-6fa54d94db8e9b90b811d46460ff5bf495be056b"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.demo-6fa54d94db8e9b90b811d46460ff5bf495be056b/build"
  make DESTDIR="$pkgdir" install
}
