# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-demo
pkgbase=${pkgname}
pkgver=19.0.2
pkgrel=2
pkgdesc="Demo PVR for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.demo"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.demo.tar.gz::https://github.com/kodi-pvr/pvr.demo/archive/66b72797d7e60c9e44e93502582628b22bcfac2e.tar.gz")
sha512sums=('9b33002d9c9304effe52584f6430259935158656deb4d040204d62f9ebc82b35c96427321115fff63dfcc29c5924775a9537274f82fa95c24af9c95a50ea98a9')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.demo-66b72797d7e60c9e44e93502582628b22bcfac2e"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.demo-66b72797d7e60c9e44e93502582628b22bcfac2e/build"
  make DESTDIR="$pkgdir" install
}
