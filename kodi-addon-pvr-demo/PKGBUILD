# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-demo
pkgbase=${pkgname}
pkgver=3.6.1
pkgrel=1
pkgdesc="Demo PVR for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.demo"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.demo.tar.gz::https://github.com/kodi-pvr/pvr.demo/archive/964686dc47e3945b7992caf220beba2c16331111.tar.gz")
sha512sums=('8cd425c23bd40532b48587c78c1db741c1050777c3262d18013c1f3135dab0bcfbad87fe93d9b80fbdb57b4be223f5d1f2ff61ca6a1a6c42b4c5b61e120966a0')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.demo-964686dc47e3945b7992caf220beba2c16331111"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.demo-964686dc47e3945b7992caf220beba2c16331111/build"
  make DESTDIR="$pkgdir" install
}
