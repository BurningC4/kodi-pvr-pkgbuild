# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-demo
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=2
pkgdesc="Demo PVR for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.demo"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.demo.tar.gz::https://github.com/kodi-pvr/pvr.demo/archive/8d71aad295b623d3cd814748bc4be91ef214591e.tar.gz")
sha512sums=('3ec5af07162ff8714d06a6d2112e892976374a98fa748f3e289185cccfe4b907e5dcdee05a59dc104413e6dff3f93c6e336383aa42f6ea4c5dcfdffb4d6f596c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.demo-8d71aad295b623d3cd814748bc4be91ef214591e"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.demo-8d71aad295b623d3cd814748bc4be91ef214591e/build"
  make DESTDIR="$pkgdir" install
}
