# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-demo
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=3
pkgdesc="Demo PVR for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.demo"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.demo.tar.gz::https://github.com/kodi-pvr/pvr.demo/archive/9f0dd261504d34755da06b6ea8b6f2adf8127d3e.tar.gz")
sha512sums=('c236a30a7c310866eaa3ccd333d068fc6e861ebbe3bb6cc3a265396b3a0817a0e89cbe5840c8aa8531b0112d75ffd183536bce03dcda4ee84f32767f77417bfd')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.demo-9f0dd261504d34755da06b6ea8b6f2adf8127d3e"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.demo-9f0dd261504d34755da06b6ea8b6f2adf8127d3e/build"
  make DESTDIR="$pkgdir" install
}
