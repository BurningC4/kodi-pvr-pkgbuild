# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-demo
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=1
pkgdesc="Demo PVR for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.demo"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.demo.tar.gz::https://github.com/kodi-pvr/pvr.demo/archive/c13b2c0dd98102fee114efe37dafcfc02e64f62b.tar.gz")
sha512sums=('c356607bd237739bf05352916a54eef464d2c74f67b3f6686d8f0b22c20257d334c44609318a8b9c53e9763e0ebee0eabe40426c2ba2e558520e69c0e649eea5')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.demo-c13b2c0dd98102fee114efe37dafcfc02e64f62b"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.demo-c13b2c0dd98102fee114efe37dafcfc02e64f62b/build"
  make DESTDIR="$pkgdir" install
}
