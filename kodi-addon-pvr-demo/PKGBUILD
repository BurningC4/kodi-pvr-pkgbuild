# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-demo
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=1
pkgdesc="Demo PVR for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.demo"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.demo.tar.gz::https://github.com/kodi-pvr/pvr.demo/archive/bd3f10e7b19e09cecad07611dcc237c4f01b33ee.tar.gz")
sha512sums=('d4e4054d13284dfe808aabab68438aca657de5f442fd395ea741bf6b9a7b6b8950e31c84ee03960ebea44de520ef712f8907499f73787f6a890509b848f3f329')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.demo-bd3f10e7b19e09cecad07611dcc237c4f01b33ee"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.demo-bd3f10e7b19e09cecad07611dcc237c4f01b33ee/build"
  make DESTDIR="$pkgdir" install
}
