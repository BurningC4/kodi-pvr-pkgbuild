# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvblink
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=4
pkgdesc="Kodi's DVBLink client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvblink"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvblink.tar.gz::https://github.com/kodi-pvr/pvr.dvblink/archive/9faff10a4b6a4db9fbd5ce200e88a0e483c35092.tar.gz")
sha512sums=('24af0868289211455756a0bbf6ced63c8659565993d52108181e4f8be292ce99302637cd0f9a8716445869d7bd33157867f9a58123d4efab917523e91dd9487b')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvblink-9faff10a4b6a4db9fbd5ce200e88a0e483c35092"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvblink-9faff10a4b6a4db9fbd5ce200e88a0e483c35092/build"
  make DESTDIR="$pkgdir" install
}
