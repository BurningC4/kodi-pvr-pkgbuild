# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvblink
pkgbase=${pkgname}
pkgver=19.0.1
pkgrel=1
pkgdesc="Kodi's DVBLink client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvblink"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvblink.tar.gz::https://github.com/kodi-pvr/pvr.dvblink/archive/dacacc60982b56be33c70116c9d849005d43ee97.tar.gz")
sha512sums=('74f78afdbf73b4ef76ba2363f68f92b4d5ce0ffdbc7bb7f23021c97eceaaaf64f7eb3062736bc3ace13e766a6924e02747a366ca43a5b694e0437cb225a23bdc')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvblink-dacacc60982b56be33c70116c9d849005d43ee97"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvblink-dacacc60982b56be33c70116c9d849005d43ee97/build"
  make DESTDIR="$pkgdir" install
}
