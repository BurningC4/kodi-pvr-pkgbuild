# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvblink
pkgbase=${pkgname}
pkgver=4.7.2
pkgrel=1
pkgdesc="Kodi's DVBLink client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvblink"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvblink.tar.gz::https://github.com/kodi-pvr/pvr.dvblink/archive/ecc9cfdd5e32b37205804f757ea8d6a77ee2d768.tar.gz")
sha512sums=('44c2162183caf5fd27dd097972faeefc8edba9388ef52e5764fe528acce0699db95757dee811b2aa032872d190cab04ff0249c0b5a68c55633d8fe8e373459e5')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvblink-ecc9cfdd5e32b37205804f757ea8d6a77ee2d768"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvblink-ecc9cfdd5e32b37205804f757ea8d6a77ee2d768/build"
  make DESTDIR="$pkgdir" install
}
