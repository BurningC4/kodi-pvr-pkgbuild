# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvblink
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Kodi's DVBLink client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvblink"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvblink.tar.gz::https://github.com/kodi-pvr/pvr.dvblink/archive/1590d0bd9c946d36c5843c73792d074611f6676b.tar.gz")
sha512sums=('a2284584df1a12852b0e8c02e8ce4b523bcc98b37cf75d20a6d9ff224c8d6b2690e557ccaf6b8952c17d330afe9806d1565f98d791a1a16da5a6c4ec11551ec6')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvblink-1590d0bd9c946d36c5843c73792d074611f6676b"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvblink-1590d0bd9c946d36c5843c73792d074611f6676b/build"
  make DESTDIR="$pkgdir" install
}
