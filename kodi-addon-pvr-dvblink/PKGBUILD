# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvblink
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=5
pkgdesc="Kodi's DVBLink client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvblink"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvblink.tar.gz::https://github.com/kodi-pvr/pvr.dvblink/archive/5c93d6c75d7d4bc68d3bba0c26266e25612e4655.tar.gz")
sha512sums=('7b305a6a405175fa3a95bbe9e9d26ce573243e6bd74c2789bf29f69f877ee04f36a05f48d905d1dc3c15476d0f946691bd207037047a54d3b83048674230210c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvblink-5c93d6c75d7d4bc68d3bba0c26266e25612e4655"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvblink-5c93d6c75d7d4bc68d3bba0c26266e25612e4655/build"
  make DESTDIR="$pkgdir" install
}
