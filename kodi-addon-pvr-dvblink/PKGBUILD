# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvblink
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=3
pkgdesc="Kodi's DVBLink client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvblink"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvblink.tar.gz::https://github.com/kodi-pvr/pvr.dvblink/archive/d3573c19df4098611a21d3d442c6cde820f65ed2.tar.gz")
sha512sums=('37249f8b81c31c54e73a93fa15b2bdbd78c8d54a912234d4c711e80ae48881536db514b62d67f4ee65244c7544b5883b4413a872798ad342fd3627691ef9b2d4')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvblink-d3573c19df4098611a21d3d442c6cde820f65ed2"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvblink-d3573c19df4098611a21d3d442c6cde820f65ed2/build"
  make DESTDIR="$pkgdir" install
}
