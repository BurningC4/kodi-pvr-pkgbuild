# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvblink
pkgbase=${pkgname}
pkgver=19.0.1
pkgrel=2
pkgdesc="Kodi's DVBLink client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvblink"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvblink.tar.gz::https://github.com/kodi-pvr/pvr.dvblink/archive/f6b1a20978653031c19be9955edfe2525b0a9061.tar.gz")
sha512sums=('8e5253b4bf6a98f462c83ef8a34164f46fa58c429771736a0b6ad6f1e6c70adeadb9e3057178155082f5dd8476c2e225d54b329a3bdcbe80da71e6475557de79')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvblink-f6b1a20978653031c19be9955edfe2525b0a9061"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvblink-f6b1a20978653031c19be9955edfe2525b0a9061/build"
  make DESTDIR="$pkgdir" install
}
