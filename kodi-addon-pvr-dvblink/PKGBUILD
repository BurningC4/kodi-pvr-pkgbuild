# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvblink
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=2
pkgdesc="Kodi's DVBLink client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvblink"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvblink.tar.gz::https://github.com/kodi-pvr/pvr.dvblink/archive/09128994150a5fc4207f036e4f6567682f6331eb.tar.gz")
sha512sums=('d7e570b55a6831afa69e024fd468f75427f42909cb27e94bb3a8418987212f1b1a6ddf62579c64491f1bbef98915258273e00f5cb6ccd612fdef9563b64da97e')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvblink-09128994150a5fc4207f036e4f6567682f6331eb"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvblink-09128994150a5fc4207f036e4f6567682f6331eb/build"
  make DESTDIR="$pkgdir" install
}
