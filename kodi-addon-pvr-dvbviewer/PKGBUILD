# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvbviewer
pkgbase=${pkgname}
pkgver=19.1.0
pkgrel=3
pkgdesc="Kodi's DVBViewer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvbviewer"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvbviewer.tar.gz::https://github.com/kodi-pvr/pvr.dvbviewer/archive/665face312326d62af30f21fcfcc9d42c4faf6d6.tar.gz")
sha512sums=('5a4ad404f5b5451b752e3fd3461e2c02d9c10f329e608de347217b16650d361a510d0ba262a61cea5978aab6e08a05b15805f75aaa32852752cd7cb0918c5fae')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvbviewer-665face312326d62af30f21fcfcc9d42c4faf6d6"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvbviewer-665face312326d62af30f21fcfcc9d42c4faf6d6/build"
  make DESTDIR="$pkgdir" install
}
