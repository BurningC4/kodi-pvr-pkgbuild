# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvbviewer
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=1
pkgdesc="Kodi's DVBViewer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvbviewer"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvbviewer.tar.gz::https://github.com/kodi-pvr/pvr.dvbviewer/archive/e5388bb91f2682690d50a987ffbc6e00561e8b16.tar.gz")
sha512sums=('69414de10d808efca27fff9951d9e00dc635528a4a076044a6bc0313b80e447780598e87934a41834f8624a71898437e15104755f77a7f7e21a4c2ad0229138e')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvbviewer-e5388bb91f2682690d50a987ffbc6e00561e8b16"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvbviewer-e5388bb91f2682690d50a987ffbc6e00561e8b16/build"
  make DESTDIR="$pkgdir" install
}
