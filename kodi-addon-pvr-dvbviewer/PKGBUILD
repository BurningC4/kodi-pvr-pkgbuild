# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvbviewer
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=2
pkgdesc="Kodi's DVBViewer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvbviewer"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvbviewer.tar.gz::https://github.com/kodi-pvr/pvr.dvbviewer/archive/70f54fca7557860611ce0af96f7f5cad00e26ddc.tar.gz")
sha512sums=('556ab6c488c423b9d26379f0c757c856b2c074dc7976691aecc0c94626553af97e649e41fd53fe34195497d328e49c08bec5c79c7bfd56cbfbdd601032658920')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvbviewer-70f54fca7557860611ce0af96f7f5cad00e26ddc"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvbviewer-70f54fca7557860611ce0af96f7f5cad00e26ddc/build"
  make DESTDIR="$pkgdir" install
}
