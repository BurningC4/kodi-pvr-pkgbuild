# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvbviewer
pkgbase=${pkgname}
pkgver=3.7.12
pkgrel=1
pkgdesc="Kodi's DVBViewer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvbviewer"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvbviewer.tar.gz::https://github.com/kodi-pvr/pvr.dvbviewer/archive/c2c1beb807f3b26dff13521636cbfb1362af86f4.tar.gz")
sha512sums=('7b4df76d16258c1917ffc79e3702cae89093ab03ffc02e34ea88a91dfcf7a219a1214d581d22cf91847e482fd548b4e3119e49ba7deae4a59b759154680624aa')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvbviewer-c2c1beb807f3b26dff13521636cbfb1362af86f4"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvbviewer-c2c1beb807f3b26dff13521636cbfb1362af86f4/build"
  make DESTDIR="$pkgdir" install
}
