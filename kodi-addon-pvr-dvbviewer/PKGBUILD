# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvbviewer
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=3
pkgdesc="Kodi's DVBViewer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvbviewer"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvbviewer.tar.gz::https://github.com/kodi-pvr/pvr.dvbviewer/archive/ef65efebffe86394a2bc7d04f3e67ba46bd26687.tar.gz")
sha512sums=('042f73822104c0a25b72d1fe1a56f2837113db53c2a2deaaa451c88fefc28157fe57233b36a99ef1ef8917fe75375149d43c61a9f0991edbd0f616c08fbab870')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvbviewer-ef65efebffe86394a2bc7d04f3e67ba46bd26687"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvbviewer-ef65efebffe86394a2bc7d04f3e67ba46bd26687/build"
  make DESTDIR="$pkgdir" install
}
