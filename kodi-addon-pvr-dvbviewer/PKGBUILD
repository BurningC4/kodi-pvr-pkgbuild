# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvbviewer
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=1
pkgdesc="Kodi's DVBViewer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvbviewer"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvbviewer.tar.gz::https://github.com/kodi-pvr/pvr.dvbviewer/archive/c60b94abde2e42c52a90355d6003d50db29ace1e.tar.gz")
sha512sums=('feb55cd5662e9a54676897cce9dc0e23f4b3df114bb15a701190b3fa7f286346eeae1c2e0531cd4160a8033d756e82e15df137279fcea9906ec8aec02c5eac0a')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvbviewer-c60b94abde2e42c52a90355d6003d50db29ace1e"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvbviewer-c60b94abde2e42c52a90355d6003d50db29ace1e/build"
  make DESTDIR="$pkgdir" install
}
