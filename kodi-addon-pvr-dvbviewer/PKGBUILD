# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-dvbviewer
pkgbase=${pkgname}
pkgver=19.1.0
pkgrel=2
pkgdesc="Kodi's DVBViewer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.dvbviewer"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.dvbviewer.tar.gz::https://github.com/kodi-pvr/pvr.dvbviewer/archive/7de1d49c6899d5fdb997dd3dd73755bf1bf94e79.tar.gz")
sha512sums=('51d99e726fec22a3d2d43f1149ca9fd19331d9a4da4cc77295d919711640e45a8951dbc4824be7ea2284a08b1f50671134ccbf558cff5ef68d313caa266c1943')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.dvbviewer-7de1d49c6899d5fdb997dd3dd73755bf1bf94e79"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.dvbviewer-7de1d49c6899d5fdb997dd3dd73755bf1bf94e79/build"
  make DESTDIR="$pkgdir" install
}
