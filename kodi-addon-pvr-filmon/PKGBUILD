# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-filmon
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=2
pkgdesc="Kodi's Filmon client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.filmon"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.filmon.tar.gz::https://github.com/kodi-pvr/pvr.filmon/archive/46c3cc61b5bdb9581f9b2210b1b9a4e8a66d09da.tar.gz")
sha512sums=('1267b3d217edd503dbac122a3866f36083f568636a32a7479a2d639572bc2af95c933160ce2278703c83992a3b8c6563c17ba3e352ab66360d214c7e7b0e4117')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.filmon-46c3cc61b5bdb9581f9b2210b1b9a4e8a66d09da"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.filmon-46c3cc61b5bdb9581f9b2210b1b9a4e8a66d09da/build"
  make DESTDIR="$pkgdir" install
}
