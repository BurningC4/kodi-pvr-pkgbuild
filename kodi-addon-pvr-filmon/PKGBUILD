# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-filmon
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Kodi's Filmon client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.filmon"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.filmon.tar.gz::https://github.com/kodi-pvr/pvr.filmon/archive/e869f43fed8c8587388ae30421ce065787dc5ef1.tar.gz")
sha512sums=('43fb1fdc196ec9ef9f2d91119486053015b5f00753ac6283481b0d700f046be6ca960cd4fc4e5ba16c34e1b8f2a25fe77b0b5f25b65779d1f0eb6f31ced142b2')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.filmon-e869f43fed8c8587388ae30421ce065787dc5ef1"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.filmon-e869f43fed8c8587388ae30421ce065787dc5ef1/build"
  make DESTDIR="$pkgdir" install
}
