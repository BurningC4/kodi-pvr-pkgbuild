# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-filmon
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Kodi's Filmon client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.filmon"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.filmon.tar.gz::https://github.com/kodi-pvr/pvr.filmon/archive/a3f8ef9f34a1c5de2f84cc9ac861e950134aff89.tar.gz")
sha512sums=('947630de811e1a17f9664c4e9f5a3ef77427cb59fbbaf6850381ff8ea0bba1245d03f959d48a53ab75997fbcf35b4dc1672a4a1ee790663128ee9f6dbc95abab')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.filmon-a3f8ef9f34a1c5de2f84cc9ac861e950134aff89"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.filmon-a3f8ef9f34a1c5de2f84cc9ac861e950134aff89/build"
  make DESTDIR="$pkgdir" install
}
