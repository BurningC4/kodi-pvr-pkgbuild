# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-filmon
pkgbase=${pkgname}
pkgver=2.4.4
pkgrel=1
pkgdesc="Kodi's Filmon client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.filmon"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.filmon.tar.gz::https://github.com/kodi-pvr/pvr.filmon/archive/e8506330fcb1c9027a01a26f4487df997c7c2523.tar.gz")
sha512sums=('87a8f77b8ee655788ee20e3ce659ebe6877685de002bd380c6e16ccf7cc49725ef5c2f28d8255f36d9741a5a7846712eb4aac0cbd18bcd967d1064033474bf39')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.filmon-e8506330fcb1c9027a01a26f4487df997c7c2523"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.filmon-e8506330fcb1c9027a01a26f4487df997c7c2523/build"
  make DESTDIR="$pkgdir" install
}
