# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-filmon
pkgbase=${pkgname}
pkgver=19.0.1
pkgrel=2
pkgdesc="Kodi's Filmon client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.filmon"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.filmon.tar.gz::https://github.com/kodi-pvr/pvr.filmon/archive/317e14a2081e21504de7868a49fef09a5d909049.tar.gz")
sha512sums=('a6ec59be4df8815bc481e98e9b21e6f6946b522de809bd809408b8312344fbca91f6cbb0b40c7d54f33b8c15ac350ae985d9bafec60d16b25f61dea5497a4f22')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.filmon-317e14a2081e21504de7868a49fef09a5d909049"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.filmon-317e14a2081e21504de7868a49fef09a5d909049/build"
  make DESTDIR="$pkgdir" install
}
