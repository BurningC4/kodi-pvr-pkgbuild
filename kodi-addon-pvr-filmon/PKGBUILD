# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-filmon
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Kodi's Filmon client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.filmon"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.filmon.tar.gz::https://github.com/kodi-pvr/pvr.filmon/archive/e869f43fed8c8587388ae30421ce065787dc5ef1.tar.gz")
sha512sums=('b7a091f6d4acd9c0c0eb0a4ceca42493d55f926eb7b75ff2f0038f542973799525b30d6bf9e01e67967d92581f9fe5565621fead74420213b8afbc93433914d1')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.filmon-e869f43fed8c8587388ae30421ce065787dc5ef1"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.filmon-e869f43fed8c8587388ae30421ce065787dc5ef1/build"
  make DESTDIR="$pkgdir" install
}
