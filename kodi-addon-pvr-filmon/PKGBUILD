# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-filmon
pkgbase=${pkgname}
pkgver=19.0.1
pkgrel=1
pkgdesc="Kodi's Filmon client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.filmon"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.filmon.tar.gz::https://github.com/kodi-pvr/pvr.filmon/archive/44d991c3dce3cd10d7cb5d1cfca2727c3dd153e6.tar.gz")
sha512sums=('cc0f91f10565efb2c740078208a4e5e2daf03485f0f14373f28f0dffe40ccb94785df101274fef4f9def44a68e592809c4cd7b3cca9823340e03e18e9fd5fb77')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.filmon-44d991c3dce3cd10d7cb5d1cfca2727c3dd153e6"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.filmon-44d991c3dce3cd10d7cb5d1cfca2727c3dd153e6/build"
  make DESTDIR="$pkgdir" install
}
