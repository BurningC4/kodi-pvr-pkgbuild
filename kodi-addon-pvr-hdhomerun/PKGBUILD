# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hdhomerun
pkgbase=${pkgname}
pkgver=3.5.0
pkgrel=1
pkgdesc="Kodi's HDHomeRun client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hdhomerun"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hdhomerun.tar.gz::https://github.com/kodi-pvr/pvr.hdhomerun/archive/a9d730977ec2d529262cd19d81f0230e1def136b.tar.gz")
sha512sums=('f7abe9d021dc5d7fffcdb9a241302a5b11b3395651eb59fbffe3de69ac37994bba2ef40a571b196a9d6a19c524543480cdacad03772d11f8cc6a1b3cff56f5de')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hdhomerun-a9d730977ec2d529262cd19d81f0230e1def136b"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hdhomerun-a9d730977ec2d529262cd19d81f0230e1def136b/build"
  make DESTDIR="$pkgdir" install
}
