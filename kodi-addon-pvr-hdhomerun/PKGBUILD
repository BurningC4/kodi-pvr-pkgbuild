# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hdhomerun
pkgbase=${pkgname}
pkgver=19.1.0
pkgrel=2
pkgdesc="Kodi's HDHomeRun client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hdhomerun"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hdhomerun.tar.gz::https://github.com/kodi-pvr/pvr.hdhomerun/archive/615235927e19e5b4252b100467fe99f71c95c528.tar.gz")
sha512sums=('5f8b348a0b946ab331615e79a62ea68bff76a7f05a607939e2b2a706abeed9c654a7920418f825d3a16215aceec4f99e05629cadad34e5444342de1b5f6b1e73')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hdhomerun-615235927e19e5b4252b100467fe99f71c95c528"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hdhomerun-615235927e19e5b4252b100467fe99f71c95c528/build"
  make DESTDIR="$pkgdir" install
}
