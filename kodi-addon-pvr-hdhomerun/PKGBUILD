# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hdhomerun
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=3
pkgdesc="Kodi's HDHomeRun client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hdhomerun"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hdhomerun.tar.gz::https://github.com/kodi-pvr/pvr.hdhomerun/archive/0bdb6e1bf3829825a8e7e7c29f3e757c1d04469f.tar.gz")
sha512sums=('cc872d2e204644b4366406af2f2e0a894cd66e9562639883cefe8ffb556cf6d7542b769e0bacc267c84728d148a45a981f9946ea1f3d201f443ef93cf44aa9aa')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hdhomerun-0bdb6e1bf3829825a8e7e7c29f3e757c1d04469f"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hdhomerun-0bdb6e1bf3829825a8e7e7c29f3e757c1d04469f/build"
  make DESTDIR="$pkgdir" install
}
