# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=20.6.3
pkgrel=1
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/b34e1d3811f0c1b09e715eb540658784dee0e958.tar.gz")
sha512sums=('eae31da0dcaef69bb6f0abeff95e3f035afc4ae496f953d9ecfd46b1cc03e315936a780d86b34ed40fe8e3e881646ac22cde6aa04d85f9cbb1c8a12391cf394d')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-b34e1d3811f0c1b09e715eb540658784dee0e958"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-b34e1d3811f0c1b09e715eb540658784dee0e958/build"
  make DESTDIR="$pkgdir" install
}
