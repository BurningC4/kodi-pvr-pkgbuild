# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=20.6.5
pkgrel=1
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/88dd556ce938184b2772b71c65d3a5ccab1311ab.tar.gz")
sha512sums=('a1137c50e531a67453e432228e54a14b649b66c100506ac217f9b406b47200baf888d05453c77db62956d4d414974b3806e433aef23876ebc0737dd0efcb1d2a')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-88dd556ce938184b2772b71c65d3a5ccab1311ab"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-88dd556ce938184b2772b71c65d3a5ccab1311ab/build"
  make DESTDIR="$pkgdir" install
}
