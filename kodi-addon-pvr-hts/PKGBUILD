# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=20.7.0
pkgrel=2
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/6d3cf7b412829cdf25c1964387f8e39dd123c12a.tar.gz")
sha512sums=('4df9b05163d82ef45c413f32556c738721cadd4f9331e6cdac8763c49c0cb517a5ce8860a0e396e2296dacfa1a878e9fd7016cf1e27132b00257142438effc8e')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-6d3cf7b412829cdf25c1964387f8e39dd123c12a"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-6d3cf7b412829cdf25c1964387f8e39dd123c12a/build"
  make DESTDIR="$pkgdir" install
}
