# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=20.6.4
pkgrel=1
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/a2af295d97db9452f6176a2026a195ca942f6464.tar.gz")
sha512sums=('166db488d0674f3d65e77ca752a06439c20080c21ee696fad2b5345eae4595d2909195f400fd4b14d56c14bc1b135a15e259db8a8726cc129754ddbaf3f45e8a')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-a2af295d97db9452f6176a2026a195ca942f6464"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-a2af295d97db9452f6176a2026a195ca942f6464/build"
  make DESTDIR="$pkgdir" install
}
