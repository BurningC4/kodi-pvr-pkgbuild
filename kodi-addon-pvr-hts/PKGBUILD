# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=20.6.2
pkgrel=1
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/b6b936863cf1c0025a51119aa4eaefd512623ec6.tar.gz")
sha512sums=('42e2487fb46cfbc141c48135a70fda0d35c60ccbdd602deebb62550085e1cd3463be2df0d2a1f08f66ab89173c2d50df13279bb9e8f6eccd82924a8ed0b9a8ab')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-b6b936863cf1c0025a51119aa4eaefd512623ec6"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-b6b936863cf1c0025a51119aa4eaefd512623ec6/build"
  make DESTDIR="$pkgdir" install
}
