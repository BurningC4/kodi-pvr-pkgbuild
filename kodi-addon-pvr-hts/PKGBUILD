# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=19.0.6
pkgrel=2
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/49d92447d1a0b7a6724da2e9703ffde8ca9c19ae.tar.gz")
sha512sums=('eaef7710dbc4d28e995643426666d490aa69522044ab332c242a95126c1cef236a5866e42904b8fc200fcca661002ffd944681d08e2897d76b43db4f1fc66a77')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-49d92447d1a0b7a6724da2e9703ffde8ca9c19ae"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-49d92447d1a0b7a6724da2e9703ffde8ca9c19ae/build"
  make DESTDIR="$pkgdir" install
}
