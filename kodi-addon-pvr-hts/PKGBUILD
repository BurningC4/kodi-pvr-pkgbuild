# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=20.6.2
pkgrel=2
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/25670abbe71b1666157891f55739707eb2c9c07a.tar.gz")
sha512sums=('6842093f5a2c92ca57ab9c377db2cc8ee9786cdb45f04498433776ac638ad3f569c47538eba993cf0f1822380d27ec78e9cad4455a28d9e8422be194abd8415e')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-25670abbe71b1666157891f55739707eb2c9c07a"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-25670abbe71b1666157891f55739707eb2c9c07a/build"
  make DESTDIR="$pkgdir" install
}
