# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=20.6.4
pkgrel=2
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/2ed507ac69142ba681bcd4db36cb1ef87515e94b.tar.gz")
sha512sums=('06d65792c991121a0803e33620d78fbf470683cdcb511724d94e9227213fa0b856429a22814f064018220bf25752bbe722243eb8af53f8d0fd0f0578e14dda6c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-2ed507ac69142ba681bcd4db36cb1ef87515e94b"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-2ed507ac69142ba681bcd4db36cb1ef87515e94b/build"
  make DESTDIR="$pkgdir" install
}
