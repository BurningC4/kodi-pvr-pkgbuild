# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=20.7.0
pkgrel=1
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/7e6a29450234ff9033fb8dba6a647bc9908e097d.tar.gz")
sha512sums=('bab4ec0420899cf67d39661600ed5abdaac5c4b2b7c0254cc565b62d3408e2452ef9f587a718e21430de07c86b35fc1d9d30bd5c89a83686f3a8a108165ea2a2')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-7e6a29450234ff9033fb8dba6a647bc9908e097d"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-7e6a29450234ff9033fb8dba6a647bc9908e097d/build"
  make DESTDIR="$pkgdir" install
}
