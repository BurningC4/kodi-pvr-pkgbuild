# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=4.4.16
pkgrel=1
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/8dcd62dbe538851b472db3213b63d8d99b8957dd.tar.gz")
sha512sums=('5e6dc7d1a475901d1815c0c8e16c0478f89211c46b2520afafe783273841a3d2344772b744e03baab3544addc426fcc314af6018274bc9d10e849c4fa0d259c7')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-8dcd62dbe538851b472db3213b63d8d99b8957dd"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-8dcd62dbe538851b472db3213b63d8d99b8957dd/build"
  make DESTDIR="$pkgdir" install
}
