# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-hts
pkgbase=${pkgname}
pkgver=19.0.6
pkgrel=1
pkgdesc="Kodi's Tvheadend HTSP client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.hts"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.hts.tar.gz::https://github.com/kodi-pvr/pvr.hts/archive/1c1f6171d5f5fdadd44127662121ea224eb87b05.tar.gz")
sha512sums=('d58e619051e57dfcfb457449744289a566996f2b57b8420360bf5ff3b06ae86f2d5aa2f0a4ff645fb21cf6850b992a629226ad60dc4b463a1b869cbf418e6818')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.hts-1c1f6171d5f5fdadd44127662121ea224eb87b05"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.hts-1c1f6171d5f5fdadd44127662121ea224eb87b05/build"
  make DESTDIR="$pkgdir" install
}
