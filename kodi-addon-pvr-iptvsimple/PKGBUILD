# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.10.1
pkgrel=2
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/8a2bb67c6cafdb5625c3292d90c00e461f1e26b6.tar.gz")
sha512sums=('555a99e3bdbd51866843b8379d72187d7d5235d43084de815f687ec2675c4c8b0d145fbc3df704365a03de2bb27c23e099b9d5066dbe5e2509011d460a8beaee')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-8a2bb67c6cafdb5625c3292d90c00e461f1e26b6"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-8a2bb67c6cafdb5625c3292d90c00e461f1e26b6/build"
  make DESTDIR="$pkgdir" install
}
