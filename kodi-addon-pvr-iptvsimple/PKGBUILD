# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.13.0
pkgrel=2
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/e2d6cae5bdd5c9043cb3a9e0284733aeffcd0877.tar.gz")
sha512sums=('2fb21c14674efdafcb8382fa846da264d08d7f4b5db133d874c88514643ddf876f75703d707a8ef7ec66be01a5dc544adae7cd0857e994f8359fce7a97106af8')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-e2d6cae5bdd5c9043cb3a9e0284733aeffcd0877"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-e2d6cae5bdd5c9043cb3a9e0284733aeffcd0877/build"
  make DESTDIR="$pkgdir" install
}
