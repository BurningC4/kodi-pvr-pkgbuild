# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.13.0
pkgrel=2
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/fc97f8da4a24fbbd9a5424ace7f4bfa8a8bf77e2.tar.gz")
sha512sums=('ab5a13a67dfdbfcbdcc83d666ef3468216261298f9b4b9aa44e3ec9941c08b40374ef8803cc338b4cb15c31e95b39bf501a56920b8f7a6681f25c42b2b46936c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-fc97f8da4a24fbbd9a5424ace7f4bfa8a8bf77e2"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-fc97f8da4a24fbbd9a5424ace7f4bfa8a8bf77e2/build"
  make DESTDIR="$pkgdir" install
}
