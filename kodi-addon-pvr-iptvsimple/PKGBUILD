# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.8.1
pkgrel=2
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/6cef7206160d9417bd69cbfcdeb62dccdbeb011d.tar.gz")
sha512sums=('d64ac1fc959ba38f70405bd17207e972e2c5ba5069fbf862b39516e61e5a96f79faa85804429f772b00c1ae70d5098c1543d857e6e17aedf99a1cc83a7ebb420')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-6cef7206160d9417bd69cbfcdeb62dccdbeb011d"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-6cef7206160d9417bd69cbfcdeb62dccdbeb011d/build"
  make DESTDIR="$pkgdir" install
}
