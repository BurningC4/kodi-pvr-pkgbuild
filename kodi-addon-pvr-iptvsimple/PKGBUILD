# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=19.2.2
pkgrel=7
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/fddb2e933a26c46b52cbcad33d4b7d5d0908ced4.tar.gz")
sha512sums=('81568c28b5e3c190cb5bfcaf1e282fe361d734dd37baa7512e92ddc73b14df4ff096579db1013d564828a02aa56a7dd00b6bbce0f5f3d41b7c86b9bf24f7276e')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-fddb2e933a26c46b52cbcad33d4b7d5d0908ced4"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-fddb2e933a26c46b52cbcad33d4b7d5d0908ced4/build"
  make DESTDIR="$pkgdir" install
}
