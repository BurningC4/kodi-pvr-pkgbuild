# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.11.0
pkgrel=1
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/8c9321063be2daf234307dc5f5d1cea4aed285c8.tar.gz")
sha512sums=('8788a629af75175b7ea3a08424a511d9afa704c6874e0f2589b0666ab2e29af9d010f8aea8f63409a67dda1dd1566b319b8713d5e2bb0637d0e230ecb32ed247')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-8c9321063be2daf234307dc5f5d1cea4aed285c8"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-8c9321063be2daf234307dc5f5d1cea4aed285c8/build"
  make DESTDIR="$pkgdir" install
}
