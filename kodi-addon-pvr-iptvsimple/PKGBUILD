# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=19.2.1
pkgrel=1
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/83727fb09fd6b0e970ed1ff9a1162214efcab2bc.tar.gz")
sha512sums=('8138a61797ccb989e1fa6481cff517a47e23a7d3d1b87159205d2ce96cd82f95717eb27b80ff0345e6c82ebcf382ea1146f909e32ac0720614cdd30fc7cdcf36')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-83727fb09fd6b0e970ed1ff9a1162214efcab2bc"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-83727fb09fd6b0e970ed1ff9a1162214efcab2bc/build"
  make DESTDIR="$pkgdir" install
}
