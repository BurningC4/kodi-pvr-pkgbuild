# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.7.0
pkgrel=1
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/55baa771bf810bd552e212f6eec2e41e7b92cbd8.tar.gz")
sha512sums=('bb762cd0b9ebbbb25547117f17946becbe643f3a392333d58d0e56f3f889014b17b074245a11aa891f88162857846584e97a1866bd8a339747d7c3358a99deaf')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-55baa771bf810bd552e212f6eec2e41e7b92cbd8"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-55baa771bf810bd552e212f6eec2e41e7b92cbd8/build"
  make DESTDIR="$pkgdir" install
}
