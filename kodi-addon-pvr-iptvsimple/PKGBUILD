# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.13.0
pkgrel=1
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/19ef8a50503861009aea681ecb4a4d80b65809ee.tar.gz")
sha512sums=('13fedca0d6606a3c7df3a7908ab687331252976d0e5c855834e9ba74e90f98fb83a950fc8f5ff4f9b720a8b632b4e72506bd52f9de67adef70d57698d48aa4fe')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-19ef8a50503861009aea681ecb4a4d80b65809ee"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-19ef8a50503861009aea681ecb4a4d80b65809ee/build"
  make DESTDIR="$pkgdir" install
}
