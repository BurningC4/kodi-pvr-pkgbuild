# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.10.1
pkgrel=3
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/9d28ac54778bcc651eb4ce65f1944f4d27c589f7.tar.gz")
sha512sums=('4f629cbaa68225456e38a554a66247d04bced265a58b9d5c574efdb410ce727ac7f30fc85ad7b6e00c53bbdd5c158826bd7fe7adfaed23794e24416fc66e7e6f')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-9d28ac54778bcc651eb4ce65f1944f4d27c589f7"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-9d28ac54778bcc651eb4ce65f1944f4d27c589f7/build"
  make DESTDIR="$pkgdir" install
}
