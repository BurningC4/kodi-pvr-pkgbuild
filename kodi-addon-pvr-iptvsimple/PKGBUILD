# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=19.2.2
pkgrel=8
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/a5bb9b79e69f3145d33510027cbf185a4e9b93b6.tar.gz")
sha512sums=('bbcfb1069699bef20d4735e94b8d4599df07119679ba084075573f92519e9c1c22a68a14e7eb6ef601c95ad9852f7a80d4fd313031be24a556a97e83c9271a7d')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-a5bb9b79e69f3145d33510027cbf185a4e9b93b6"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-a5bb9b79e69f3145d33510027cbf185a4e9b93b6/build"
  make DESTDIR="$pkgdir" install
}
