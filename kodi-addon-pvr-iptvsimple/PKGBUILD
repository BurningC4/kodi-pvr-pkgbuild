# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.9.0
pkgrel=1
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/b6c18e7c5279caf96ee2351b093bbfcb533dd3c2.tar.gz")
sha512sums=('e8cc2cfb95cf39afbfe3c008e28849be547e821ebcf7346fd2260084f10f27d4ea293fa0d9974669ce12050b139222ce852426a08d2c9950481e05e7fb82b8ca')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-b6c18e7c5279caf96ee2351b093bbfcb533dd3c2"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-b6c18e7c5279caf96ee2351b093bbfcb533dd3c2/build"
  make DESTDIR="$pkgdir" install
}
