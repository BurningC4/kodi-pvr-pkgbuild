# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.11.0
pkgrel=2
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/918aa701bebf9d57ee98b7be414d4cb2b0b97b8f.tar.gz")
sha512sums=('29924facdca14c151b8b1c9d897ab44a1f36ae6543efbab051de2867576d9f7aec6e212c3e6473b2bddb5f5dbeba1fcfb0a1796a8cbad7924ab92adde72f28b3')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-918aa701bebf9d57ee98b7be414d4cb2b0b97b8f"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-918aa701bebf9d57ee98b7be414d4cb2b0b97b8f/build"
  make DESTDIR="$pkgdir" install
}
