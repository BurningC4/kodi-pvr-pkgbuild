# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=19.2.2
pkgrel=6
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/497a6e78a7ade5507ba723e44abcdb16153a0249.tar.gz")
sha512sums=('0bec92b04ac4e062ec83619e3cbd6ffc426d63f893a695ffc589682f3affd17a31b881b67fd4d8172b53750b7931c3bf39a2de64d270e4b23f3a11062cd53044')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-497a6e78a7ade5507ba723e44abcdb16153a0249"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-497a6e78a7ade5507ba723e44abcdb16153a0249/build"
  make DESTDIR="$pkgdir" install
}
