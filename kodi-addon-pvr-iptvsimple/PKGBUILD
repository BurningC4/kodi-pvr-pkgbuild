# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=19.2.2
pkgrel=2
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/f7a6a9e42e4c5da048f7c4dac2af68577096122a.tar.gz")
sha512sums=('2c82e84a56e7c5ea2cfc06598ffffb0ccea71763f470ce22416988789c1a0129df51402d7cef3efd17bc4d316ac94370aa71023994b443b61bfe380ced25cbe2')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-f7a6a9e42e4c5da048f7c4dac2af68577096122a"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-f7a6a9e42e4c5da048f7c4dac2af68577096122a/build"
  make DESTDIR="$pkgdir" install
}
