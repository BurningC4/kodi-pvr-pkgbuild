# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=19.2.2
pkgrel=2
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/09f256d48f7c9ea6d05d06d0f30d7f4d84a798a6.tar.gz")
sha512sums=('f1547af749e6f89b674f10bfd4c43af4c6a2ea72b34a79be92eec89dbff53a462ef5e6c753249b4efd9ccd187e736f76c3197254aa470d6de03fa0b5b4e02a11')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-09f256d48f7c9ea6d05d06d0f30d7f4d84a798a6"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-09f256d48f7c9ea6d05d06d0f30d7f4d84a798a6/build"
  make DESTDIR="$pkgdir" install
}
