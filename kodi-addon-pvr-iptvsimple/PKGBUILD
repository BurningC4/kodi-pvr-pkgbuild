# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=19.2.2
pkgrel=4
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/9bac7d0893cdbcbcdbfaf943861222f9f588c0d0.tar.gz")
sha512sums=('bf57a5ec5f9d114a7ab6ceaa4fcfb15dec2bcf5eb8c048d9b2732d4cf1caa70cdfd7d857aeaab7bdf42eeb331168c39d6122a486e3120f4f8443f35be18bc0e8')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-9bac7d0893cdbcbcdbfaf943861222f9f588c0d0"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-9bac7d0893cdbcbcdbfaf943861222f9f588c0d0/build"
  make DESTDIR="$pkgdir" install
}
