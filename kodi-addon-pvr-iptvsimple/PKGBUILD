# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.11.0
pkgrel=3
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/7a6fbe6dd060a352950fc47a7b2ee264324a3960.tar.gz")
sha512sums=('5adbd319afec464986be819e8ea22be0861792d2e2cf2142bd3a5ea95bc80f89451c87a617fc6252ea11f0bded265926db31a256cc924f77432ef5bbb0f5b806')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-7a6fbe6dd060a352950fc47a7b2ee264324a3960"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-7a6fbe6dd060a352950fc47a7b2ee264324a3960/build"
  make DESTDIR="$pkgdir" install
}
