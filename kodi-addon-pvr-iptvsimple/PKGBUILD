# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.10.0
pkgrel=2
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/4d67974e5f02fc964104fa7608a6df0c94b89197.tar.gz")
sha512sums=('d6e611c7e4182ddd716d7ccb6ca5c8a5d26eac30da4db4096f22453e69d338c636af46db39dea110487bdabb8c657d43d9f770334d6515602b653c1fa597042f')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-4d67974e5f02fc964104fa7608a6df0c94b89197"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-4d67974e5f02fc964104fa7608a6df0c94b89197/build"
  make DESTDIR="$pkgdir" install
}
