# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.13.0
pkgrel=3
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/7b75a2dd7445102fd2699c6c387bb1ddaf552cf6.tar.gz")
sha512sums=('8d7b6dddd76600dae5a7a1120b3c15b6da22613e2043aadc72a836a9e1c7c113d9d0e9e87d9e37f5ff704e7173f317ebcc23f79909959e5a1b3871757cc57c7e')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-7b75a2dd7445102fd2699c6c387bb1ddaf552cf6"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-7b75a2dd7445102fd2699c6c387bb1ddaf552cf6/build"
  make DESTDIR="$pkgdir" install
}
