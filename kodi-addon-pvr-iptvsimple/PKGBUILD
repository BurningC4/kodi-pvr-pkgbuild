# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.8.1
pkgrel=1
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/db326dc3aa93011280486015eeea256102dad162.tar.gz")
sha512sums=('270bfd19f04f0d8fb56874e974142f2a5329aa1892185fa9a28da48714690172dfecb057f6cfef83f8354cc400a935987d308bbfec9e8494ed18a46bdc1b0044')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-db326dc3aa93011280486015eeea256102dad162"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-db326dc3aa93011280486015eeea256102dad162/build"
  make DESTDIR="$pkgdir" install
}
