# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.11.0
pkgrel=4
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/4f97b2177f7a8f04c647cd7407252cb0c306c090.tar.gz")
sha512sums=('d93a630e813229646febd80e1a70c12e1c8b053dc972c1a98c48caed90bbeba1cc68dd44cd67d5e350560790002660da94b792afec5db96445d056a56e467747')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-4f97b2177f7a8f04c647cd7407252cb0c306c090"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-4f97b2177f7a8f04c647cd7407252cb0c306c090/build"
  make DESTDIR="$pkgdir" install
}
