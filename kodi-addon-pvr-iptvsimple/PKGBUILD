# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=19.2.2
pkgrel=9
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/a91cff04e221d7460c719ea7c5dc5559110f50bc.tar.gz")
sha512sums=('992be0f262fd6ca4506570260258919b969a509b1ea953d32ed43f5c7c05d2a86d0ac386e39dcd38dbd54ef497b0d06f02b16a8c63f2f3860213de6576728509')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-a91cff04e221d7460c719ea7c5dc5559110f50bc"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-a91cff04e221d7460c719ea7c5dc5559110f50bc/build"
  make DESTDIR="$pkgdir" install
}
