# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.10.0
pkgrel=1
pkgdesc="IPTV Simple client for Kodi PVR"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/d0f906367aa060f144ad6eb59a4bedaee1b7d28d.tar.gz")
sha512sums=('0c081a4ffa7a610e4dee66face4df254c7d2437c01b43a6d3c330e3e61f906a869ba26e02621c014d648e2c54e23eed83b050813d4aba260100f5d7a70e289a9')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-d0f906367aa060f144ad6eb59a4bedaee1b7d28d"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-d0f906367aa060f144ad6eb59a4bedaee1b7d28d/build"
  make DESTDIR="$pkgdir" install
}
