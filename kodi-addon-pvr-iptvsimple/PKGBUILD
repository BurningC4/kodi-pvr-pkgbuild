# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-iptvsimple
pkgbase=${pkgname}
pkgver=20.8.0
pkgrel=1
pkgdesc="Kodi: IPTV Simple client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.iptvsimple.tar.gz::https://github.com/kodi-pvr/pvr.iptvsimple/archive/278726216950a61e2f0f0c2e398504588404d25a.tar.gz")
sha512sums=('12764497d8d7103d19a8588cf25e23d06fecfa65b639bf6ba80973d82f6b71f7f8e3f5c248c6c8369ae4518a2bd9f6d85e6769ca506c55c433d6a58be04c14e2')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.iptvsimple-278726216950a61e2f0f0c2e398504588404d25a"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.iptvsimple-278726216950a61e2f0f0c2e398504588404d25a/build"
  make DESTDIR="$pkgdir" install
}
