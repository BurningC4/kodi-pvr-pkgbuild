# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-mediaportal-tvserver
pkgbase=${pkgname}
pkgver=19.0.2
pkgrel=3
pkgdesc="Kodi: MediaPortal TVServer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.mediaportal.tvserver"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.mediaportal.tvserver.tar.gz::https://github.com/kodi-pvr/pvr.mediaportal.tvserver/archive/715bf65939d156b50c34fba460a63fbdbe9b0705.tar.gz")
sha512sums=('963e2e47beaf70e5f251860482ded6a38e752742dbcb069097315062196275d1056ee8714fe415e755ab1585188ee373d16575c2a56a99d60717d5513668a0b5')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.mediaportal.tvserver-715bf65939d156b50c34fba460a63fbdbe9b0705"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.mediaportal.tvserver-715bf65939d156b50c34fba460a63fbdbe9b0705/build"
  make DESTDIR="$pkgdir" install
}
