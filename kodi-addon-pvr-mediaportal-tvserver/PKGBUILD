# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-mediaportal-tvserver
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=2
pkgdesc="Kodi: MediaPortal TVServer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.mediaportal.tvserver"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.mediaportal.tvserver.tar.gz::https://github.com/kodi-pvr/pvr.mediaportal.tvserver/archive/2f830bc50149b8a1d0020127b42a36ec98cff6af.tar.gz")
sha512sums=('630aec5f0a118badd045b8fdaed1ac7da9a3c9689f90b4d6cf2f8a615becaaf041c0cd6d852575a13f884b8886b3a9c3e4ccbd3b653355801c7283bc3109113b')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.mediaportal.tvserver-2f830bc50149b8a1d0020127b42a36ec98cff6af"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.mediaportal.tvserver-2f830bc50149b8a1d0020127b42a36ec98cff6af/build"
  make DESTDIR="$pkgdir" install
}
