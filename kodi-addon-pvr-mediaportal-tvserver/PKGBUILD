# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-mediaportal-tvserver
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Kodi: MediaPortal TVServer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.mediaportal.tvserver"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.mediaportal.tvserver.tar.gz::https://github.com/kodi-pvr/pvr.mediaportal.tvserver/archive/58139e97c470ca04e21860dd02455d34a3e31d23.tar.gz")
sha512sums=('f13fdff04f498627b51672d8d114d945032e64c871ebbb1159c8885f13327a21bdbc12cd4a866968051cb8878a5766ccd256f2fdd906c0976b15297459e4d23d')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.mediaportal.tvserver-58139e97c470ca04e21860dd02455d34a3e31d23"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.mediaportal.tvserver-58139e97c470ca04e21860dd02455d34a3e31d23/build"
  make DESTDIR="$pkgdir" install
}
