# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-mediaportal-tvserver
pkgbase=${pkgname}
pkgver=3.5.17
pkgrel=1
pkgdesc="Kodi: MediaPortal TVServer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.mediaportal.tvserver"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.mediaportal.tvserver.tar.gz::https://github.com/kodi-pvr/pvr.mediaportal.tvserver/archive/931afab54115f29fbfe013ebb6c48adb2ce6f859.tar.gz")
sha512sums=('f73f92e1ecb76799fd63d06cb4d9f477810a2b9590dace9fabbd7d5250d92b679cc4c8f4e26652b63541b2685168b523da26fb39cc8cb872a96f06b925381b09')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.mediaportal.tvserver-931afab54115f29fbfe013ebb6c48adb2ce6f859"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.mediaportal.tvserver-931afab54115f29fbfe013ebb6c48adb2ce6f859/build"
  make DESTDIR="$pkgdir" install
}
