# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-mediaportal-tvserver
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=4
pkgdesc="Kodi: MediaPortal TVServer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.mediaportal.tvserver"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.mediaportal.tvserver.tar.gz::https://github.com/kodi-pvr/pvr.mediaportal.tvserver/archive/176517f3316b510cbe9f170aa14b93e8cdadace4.tar.gz")
sha512sums=('2f62fcb07cd90107a48f990e225a8dae2baf21ba71d02514fefa0bf74332ff967782314e5ac04435d9233380c671baeadd1a9778fd1e4933a1844ddd063a93bd')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.mediaportal.tvserver-176517f3316b510cbe9f170aa14b93e8cdadace4"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.mediaportal.tvserver-176517f3316b510cbe9f170aa14b93e8cdadace4/build"
  make DESTDIR="$pkgdir" install
}
