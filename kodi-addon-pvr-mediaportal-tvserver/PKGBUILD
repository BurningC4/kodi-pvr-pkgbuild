# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-mediaportal-tvserver
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=3
pkgdesc="Kodi: MediaPortal TVServer client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.mediaportal.tvserver"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.mediaportal.tvserver.tar.gz::https://github.com/kodi-pvr/pvr.mediaportal.tvserver/archive/462c66144e05bf3c8fa74efc8f79c7b769b8f1f5.tar.gz")
sha512sums=('80672782197e03dcf1fc85dac549eea6301199fb03546f70ce58b1dd258c0119a1d41cdccbea3bee33b0337e53d89f552d59b5c0d6eeb8c84efc04004d08d9e4')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.mediaportal.tvserver-462c66144e05bf3c8fa74efc8f79c7b769b8f1f5"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.mediaportal.tvserver-462c66144e05bf3c8fa74efc8f79c7b769b8f1f5/build"
  make DESTDIR="$pkgdir" install
}
