# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-nextpvr
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=1
pkgdesc="Kodi's NextPVR client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.nextpvr"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.nextpvr.tar.gz::https://github.com/kodi-pvr/pvr.nextpvr/archive/cf8b43429d6c0bb919cad46295f6a7e0948c195a.tar.gz")
sha512sums=('7b53bf751a5eea8c1112e7b152023be74febfd8c6cebebb0cd8adb9d22a4cd2f0d644aaa2fd4f6014efbfca6557b12e7156567b76a494ed8fa262b7b9b4e1063')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.nextpvr-cf8b43429d6c0bb919cad46295f6a7e0948c195a"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.nextpvr-cf8b43429d6c0bb919cad46295f6a7e0948c195a/build"
  make DESTDIR="$pkgdir" install
}
