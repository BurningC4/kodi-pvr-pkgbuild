# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-nextpvr
pkgbase=${pkgname}
pkgver=3.3.15
pkgrel=1
pkgdesc="Kodi's NextPVR client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.nextpvr"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.nextpvr.tar.gz::https://github.com/kodi-pvr/pvr.nextpvr/archive/c104d956a88a940a1a6eeb84707846301100ff27.tar.gz")
sha512sums=('8fd70c03fe1e3a5ec716089106e5beeb8369d2fb51913dac946146f187552bd630708d46fa35306eda564a63b2430392f558139e099c00d8d75a39e70b19f7c6')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.nextpvr-c104d956a88a940a1a6eeb84707846301100ff27"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.nextpvr-c104d956a88a940a1a6eeb84707846301100ff27/build"
  make DESTDIR="$pkgdir" install
}
