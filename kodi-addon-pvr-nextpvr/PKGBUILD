# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-nextpvr
pkgbase=${pkgname}
pkgver=20.4.3
pkgrel=1
pkgdesc="Kodi's NextPVR client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.nextpvr"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.nextpvr.tar.gz::https://github.com/kodi-pvr/pvr.nextpvr/archive/618deda2decc39b4d8aa558e505bf808a685d4be.tar.gz")
sha512sums=('e87ee333b007cb32cb21f73e37f2b2e12d114e07744697f289186d977710eb47c5a36b4c747e727e524481e6ce68c0a8199e58655bca56b41ecaa21af98ce4b6')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.nextpvr-618deda2decc39b4d8aa558e505bf808a685d4be"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.nextpvr-618deda2decc39b4d8aa558e505bf808a685d4be/build"
  make DESTDIR="$pkgdir" install
}
