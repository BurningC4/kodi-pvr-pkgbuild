# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-nextpvr
pkgbase=${pkgname}
pkgver=19.0.4
pkgrel=1
pkgdesc="Kodi's NextPVR client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.nextpvr"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.nextpvr.tar.gz::https://github.com/kodi-pvr/pvr.nextpvr/archive/6043f9cb2247f6d02f4af7506f1ecc242fbc94ea.tar.gz")
sha512sums=('42c7a2639e34d04d6e4807b944c715517531db697ff5ac2d465ae36b5cc18ea6513d753d98216c4134a7fd04cfbba4073dbb3fac1f8c027119b81ec8461af37a')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.nextpvr-6043f9cb2247f6d02f4af7506f1ecc242fbc94ea"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.nextpvr-6043f9cb2247f6d02f4af7506f1ecc242fbc94ea/build"
  make DESTDIR="$pkgdir" install
}
