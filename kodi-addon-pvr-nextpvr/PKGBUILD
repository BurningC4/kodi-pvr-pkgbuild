# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-nextpvr
pkgbase=${pkgname}
pkgver=19.0.5
pkgrel=1
pkgdesc="Kodi's NextPVR client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.nextpvr"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.nextpvr.tar.gz::https://github.com/kodi-pvr/pvr.nextpvr/archive/d40e7223a52c4180733f400d5e92350f679b8199.tar.gz")
sha512sums=('b1ba20190464134c172bc72ee713254a71019f7966cdbdf818991c4a3140081fc6df3a90b368cdf0f720167f36f7fc20f945c2f0547c26f6abc5e38a2e9bf9b0')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.nextpvr-d40e7223a52c4180733f400d5e92350f679b8199"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.nextpvr-d40e7223a52c4180733f400d5e92350f679b8199/build"
  make DESTDIR="$pkgdir" install
}
