# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-nextpvr
pkgbase=${pkgname}
pkgver=20.4.2
pkgrel=1
pkgdesc="Kodi's NextPVR client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.nextpvr"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.nextpvr.tar.gz::https://github.com/kodi-pvr/pvr.nextpvr/archive/a4277a9d203cb9145b50d80c16361da610ce361b.tar.gz")
sha512sums=('97e390bf768c67f61fade9282bb67805351057b00a8b33c1303c178964d25749703a81eb244c3836a83494f508d8e8bee44039d15d61c80185a97f7a9605f0d7')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.nextpvr-a4277a9d203cb9145b50d80c16361da610ce361b"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.nextpvr-a4277a9d203cb9145b50d80c16361da610ce361b/build"
  make DESTDIR="$pkgdir" install
}
