# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-nextpvr
pkgbase=${pkgname}
pkgver=20.4.3
pkgrel=2
pkgdesc="Kodi's NextPVR client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.nextpvr"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.nextpvr.tar.gz::https://github.com/kodi-pvr/pvr.nextpvr/archive/24ec0ec6d80f10b18f2d4bb472baeee74450785f.tar.gz")
sha512sums=('11221eadb2b0117213d265d58c94e2b815e0f80724e979e063ca6233ac95fa3b5992a5ed5bda206f1e9ee20d0b3ff976234edb4fcf73aef139376cc435406e22')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.nextpvr-24ec0ec6d80f10b18f2d4bb472baeee74450785f"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.nextpvr-24ec0ec6d80f10b18f2d4bb472baeee74450785f/build"
  make DESTDIR="$pkgdir" install
}
