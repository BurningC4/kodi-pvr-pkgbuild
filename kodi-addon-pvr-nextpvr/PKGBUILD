# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-nextpvr
pkgbase=${pkgname}
pkgver=20.4.3
pkgrel=1
pkgdesc="Kodi's NextPVR client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.nextpvr"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.nextpvr.tar.gz::https://github.com/kodi-pvr/pvr.nextpvr/archive/5169f3a7e535c9904a6595468e4da4d354863e46.tar.gz")
sha512sums=('d6aa61329759cfbb642281f811b7bccc6fb71413d5c259bb626eb861f4b92e64b0b3a2eeab39683c53bae58e065af7cb3a31c8d86a5f42f8e3d6668d5f38caf5')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.nextpvr-5169f3a7e535c9904a6595468e4da4d354863e46"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.nextpvr-5169f3a7e535c9904a6595468e4da4d354863e46/build"
  make DESTDIR="$pkgdir" install
}
