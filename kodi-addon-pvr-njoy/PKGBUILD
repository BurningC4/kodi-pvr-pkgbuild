# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-njoy
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Kodi's Njoy N7 client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.njoy"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.njoy.tar.gz::https://github.com/kodi-pvr/pvr.njoy/archive/f61b9a189712ddb3288d880edae72268057f9bbc.tar.gz")
sha512sums=('ebea5db325be7b35178dddfd70bf14acf5bb045a46f53ed9d6b655083d2a55611c939d5105d832bc5e985ff933d6533c26278f17d78a92b11aacbd6c9c339393')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.njoy-f61b9a189712ddb3288d880edae72268057f9bbc"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.njoy-f61b9a189712ddb3288d880edae72268057f9bbc/build"
  make DESTDIR="$pkgdir" install
}
