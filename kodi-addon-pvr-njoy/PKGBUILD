# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-njoy
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=4
pkgdesc="Kodi's Njoy N7 client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.njoy"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.njoy.tar.gz::https://github.com/kodi-pvr/pvr.njoy/archive/80ff9c6e6858858490762325408dee1420ee059c.tar.gz")
sha512sums=('1ebb9166634018f7a9d7b6803c0bd38093b62f723ed72ea3526046bdc478a52a22ff921019a26ee1257f384dc58a02df2df717b96eb2da3c8d348376f64a5aae')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.njoy-80ff9c6e6858858490762325408dee1420ee059c"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.njoy-80ff9c6e6858858490762325408dee1420ee059c/build"
  make DESTDIR="$pkgdir" install
}
