# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-njoy
pkgbase=${pkgname}
pkgver=3.4.2
pkgrel=1
pkgdesc="Kodi's Njoy N7 client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.njoy"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.njoy.tar.gz::https://github.com/kodi-pvr/pvr.njoy/archive/4467cacf819d7312482635ac45ddd52cd61ab6e0.tar.gz")
sha512sums=('b8aa9e632b57c8bd01f83a7bdcc60f3a408261890b9e1b859ca874ab4aac823d38799775bcc6771a52f1160f0d8c90013773858dec6c878fb3cef525768d2287')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.njoy-4467cacf819d7312482635ac45ddd52cd61ab6e0"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.njoy-4467cacf819d7312482635ac45ddd52cd61ab6e0/build"
  make DESTDIR="$pkgdir" install
}
