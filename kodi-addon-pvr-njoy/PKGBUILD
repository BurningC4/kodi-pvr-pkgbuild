# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-njoy
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Kodi's Njoy N7 client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.njoy"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.njoy.tar.gz::https://github.com/kodi-pvr/pvr.njoy/archive/efa8c43a2e6aa09f9083e4cc539044f45b4a2195.tar.gz")
sha512sums=('5b854e603449cc2878285945d77dcdd4882f5d1bfd4e036ce83f687270e106a270e6d362e755c25381d0ad00613182dcbd1086bc4f65c8450844a9d7041c0765')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.njoy-efa8c43a2e6aa09f9083e4cc539044f45b4a2195"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.njoy-efa8c43a2e6aa09f9083e4cc539044f45b4a2195/build"
  make DESTDIR="$pkgdir" install
}
