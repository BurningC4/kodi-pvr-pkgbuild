# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-pctv
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=5
pkgdesc="Kodi's PCTV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.pctv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.pctv.tar.gz::https://github.com/kodi-pvr/pvr.pctv/archive/629b076b21c88026c6b805323a3a8dfafc72a147.tar.gz")
sha512sums=('4feba98a933b370c78371317a8135811724540d464b5255c074569b9344be09ff551009a1dcc7413f798139ec074d09b4f67919c78a01af973350de22d6e5f31')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.pctv-629b076b21c88026c6b805323a3a8dfafc72a147"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.pctv-629b076b21c88026c6b805323a3a8dfafc72a147/build"
  make DESTDIR="$pkgdir" install
}
