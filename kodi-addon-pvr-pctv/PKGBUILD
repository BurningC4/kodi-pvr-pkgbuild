# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-pctv
pkgbase=${pkgname}
pkgver=19.0.1
pkgrel=2
pkgdesc="Kodi's PCTV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.pctv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.pctv.tar.gz::https://github.com/kodi-pvr/pvr.pctv/archive/d5d4d1fdf6d720717273de4055c0711648ab6a3e.tar.gz")
sha512sums=('78e90307d3cc31389e358d031aeaf84fe0d04a36de2fa50d1d7e8fabc952c8323f30988da6d8d782e23b140f8ef18914911b1c8b9dd8ed78dd1f1efd493ca48b')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.pctv-d5d4d1fdf6d720717273de4055c0711648ab6a3e"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.pctv-d5d4d1fdf6d720717273de4055c0711648ab6a3e/build"
  make DESTDIR="$pkgdir" install
}
