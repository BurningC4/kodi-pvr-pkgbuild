# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-pctv
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=3
pkgdesc="Kodi's PCTV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.pctv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.pctv.tar.gz::https://github.com/kodi-pvr/pvr.pctv/archive/6908680211794f03df7a29e7c57963f1e81fe6b0.tar.gz")
sha512sums=('aa0a6efcc5b31d9bc8f9e041856fdfdffea4048f0992e7c63904ada80ad247eb34435d19f84a197aca3b97aff7ec6133b88dccc8730d47f8210338049e058373')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.pctv-6908680211794f03df7a29e7c57963f1e81fe6b0"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.pctv-6908680211794f03df7a29e7c57963f1e81fe6b0/build"
  make DESTDIR="$pkgdir" install
}
