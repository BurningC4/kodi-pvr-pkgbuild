# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-pctv
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=4
pkgdesc="Kodi's PCTV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.pctv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.pctv.tar.gz::https://github.com/kodi-pvr/pvr.pctv/archive/ac8bbe6ce142a8190ec59c792fe8d73510323185.tar.gz")
sha512sums=('f5c95ec7d4e554f29c5a4328610c30fa79bacef0c2e9c1e9baf9b97b4a07131281471a2bbe437fe568f5d14d3849b75ad8e165541ff208841b963959a86640a0')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.pctv-ac8bbe6ce142a8190ec59c792fe8d73510323185"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.pctv-ac8bbe6ce142a8190ec59c792fe8d73510323185/build"
  make DESTDIR="$pkgdir" install
}
