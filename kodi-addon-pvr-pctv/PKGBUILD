# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-pctv
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=2
pkgdesc="Kodi's PCTV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.pctv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.pctv.tar.gz::https://github.com/kodi-pvr/pvr.pctv/archive/f6615b21e93c402dd9c7a682ec677fed6f7ea088.tar.gz")
sha512sums=('72902453c015587b967b46949b7132d613f6752d6d526cb69608a4fabd7025439221bc9669cf4e1f967dbabd3257c58aca52bd23dcf822f3fd5a109f0a960c85')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.pctv-f6615b21e93c402dd9c7a682ec677fed6f7ea088"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.pctv-f6615b21e93c402dd9c7a682ec677fed6f7ea088/build"
  make DESTDIR="$pkgdir" install
}
