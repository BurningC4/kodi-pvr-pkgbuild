# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-pctv
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=1
pkgdesc="Kodi's PCTV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.pctv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.pctv.tar.gz::https://github.com/kodi-pvr/pvr.pctv/archive/0869e901ecb7b8b07569bdbd29acc0e1b7d2d475.tar.gz")
sha512sums=('d68d9cf65effd92743b05d7efe4db878070d3caa013815c591e9aaf14ef958fdc14785ab96b53eedb8bdfeeb9e26930d45cd31d615fff204e8a4314374855c6d')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.pctv-0869e901ecb7b8b07569bdbd29acc0e1b7d2d475"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.pctv-0869e901ecb7b8b07569bdbd29acc0e1b7d2d475/build"
  make DESTDIR="$pkgdir" install
}
