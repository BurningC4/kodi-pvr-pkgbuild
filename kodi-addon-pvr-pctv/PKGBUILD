# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-pctv
pkgbase=${pkgname}
pkgver=19.0.1
pkgrel=1
pkgdesc="Kodi's PCTV client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.pctv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.pctv.tar.gz::https://github.com/kodi-pvr/pvr.pctv/archive/d21c2092628f190b5312bbbe4d37f886c5c7f73b.tar.gz")
sha512sums=('9a3735db02cdf69b6a1edada414ea178594441a032d42dddcd51d9dc7ac7f4b6cffd89d8ec26f1480aaa078a4a335f2efeb2032cc77a08d40e4d4bb35bf7412b')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.pctv-d21c2092628f190b5312bbbe4d37f886c5c7f73b"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.pctv-d21c2092628f190b5312bbbe4d37f886c5c7f73b/build"
  make DESTDIR="$pkgdir" install
}
