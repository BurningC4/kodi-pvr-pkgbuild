# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-plutotv
pkgbase=${pkgname}
pkgver=20.3.1
pkgrel=1
pkgdesc="Pluto.tv PVR Client for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.plutotv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.plutotv.tar.gz::https://github.com/kodi-pvr/pvr.plutotv/archive/b00c642f86bd72b48bcaeff1c8be40d8d6d9185a.tar.gz")
sha512sums=('021af737f322f7d807315bf4092d48fac06e6be884894deae4106889944faa416e890c54b3dce28c74bd323dce3fa5862bf47967559ca9322c28cd17ccc65b75')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.plutotv-b00c642f86bd72b48bcaeff1c8be40d8d6d9185a"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.plutotv-b00c642f86bd72b48bcaeff1c8be40d8d6d9185a/build"
  make DESTDIR="$pkgdir" install
}
