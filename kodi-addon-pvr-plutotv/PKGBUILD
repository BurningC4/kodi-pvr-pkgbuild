# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-plutotv
pkgbase=${pkgname}
pkgver=20.3.1
pkgrel=2
pkgdesc="Pluto.tv PVR Client for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.plutotv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.plutotv.tar.gz::https://github.com/kodi-pvr/pvr.plutotv/archive/4449c8002f63da4b29ad98f184deb8ac4bf5361a.tar.gz")
sha512sums=('96d3b4c44f0ec8af12234fa5386340d1d111d50451d5b199789ae5721a0a7b35c2f11b60794234597d623cc54a6ebb503e0dabe0358630d13d37e46c05170773')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.plutotv-4449c8002f63da4b29ad98f184deb8ac4bf5361a"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.plutotv-4449c8002f63da4b29ad98f184deb8ac4bf5361a/build"
  make DESTDIR="$pkgdir" install
}
