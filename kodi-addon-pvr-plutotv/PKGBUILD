# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-plutotv
pkgbase=${pkgname}
pkgver=20.3.1
pkgrel=1
pkgdesc="Pluto.tv PVR Client for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.plutotv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.plutotv.tar.gz::https://github.com/kodi-pvr/pvr.plutotv/archive/59917067d1b78190fe1a425da42dda14b219c12f.tar.gz")
sha512sums=('e79088be44a1b07ecbb7c7953302453db062e58b59dff5ccdc4bb2ff677a544af6461f4e9b16a64ceba501c7cf30996e1d79f35363d817b9a2ece0a73cc5d21b')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.plutotv-59917067d1b78190fe1a425da42dda14b219c12f"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.plutotv-59917067d1b78190fe1a425da42dda14b219c12f/build"
  make DESTDIR="$pkgdir" install
}
