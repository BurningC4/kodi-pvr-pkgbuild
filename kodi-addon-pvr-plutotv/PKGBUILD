# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-plutotv
pkgbase=${pkgname}
pkgver=19.0.3
pkgrel=2
pkgdesc="Pluto.tv PVR Client for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.plutotv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.plutotv.tar.gz::https://github.com/kodi-pvr/pvr.plutotv/archive/65d69c9cdba81c7354783b5dfc24093acbf1cfb6.tar.gz")
sha512sums=('7c9a716ef1e88747273291e19229a795d7049f38a7c5398af7fdc152ef2077bb45e9b650338726e8bf0ab2171ac02a5beb06a777bd65d44e8e6245a61d7cdf79')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.plutotv-65d69c9cdba81c7354783b5dfc24093acbf1cfb6"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.plutotv-65d69c9cdba81c7354783b5dfc24093acbf1cfb6/build"
  make DESTDIR="$pkgdir" install
}
