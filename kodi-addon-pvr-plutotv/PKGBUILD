# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-plutotv
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Pluto.tv PVR Client for Kodi"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.plutotv"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.plutotv.tar.gz::https://github.com/kodi-pvr/pvr.plutotv/archive/a93e3d80e08b6eb000b6c874f5b76d6cba7faab8.tar.gz")
sha512sums=('186b80038ea0945a50538d08443fabe9e843f8908fea919644224fa5d99291d0220e39bde2bf28a3c29edbb2886f5b294a0cd3b7ca029a444b3cefec6c66626c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.plutotv-a93e3d80e08b6eb000b6c874f5b76d6cba7faab8"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.plutotv-a93e3d80e08b6eb000b6c874f5b76d6cba7faab8/build"
  make DESTDIR="$pkgdir" install
}
