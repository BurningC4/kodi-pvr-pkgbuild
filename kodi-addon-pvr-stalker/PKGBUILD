# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-stalker
pkgbase=${pkgname}
pkgver=20.3.1
pkgrel=1
pkgdesc="A PVR Client that connects Kodi to Stalker Middleware"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.stalker"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.stalker.tar.gz::https://github.com/kodi-pvr/pvr.stalker/archive/5d70b48aefedcf5585dc2dc3d850efedc1d02728.tar.gz")
sha512sums=('c78497a3da1a93435f5062c8f4c9080ccc1cebcfd4af7328b8c25cc05ae355f4818e9b13a94db44bf40e4ee8428745472eef59e769314532d49c8c471bbad6df')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.stalker-5d70b48aefedcf5585dc2dc3d850efedc1d02728"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.stalker-5d70b48aefedcf5585dc2dc3d850efedc1d02728/build"
  make DESTDIR="$pkgdir" install
}
