# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-stalker
pkgbase=${pkgname}
pkgver=20.3.1
pkgrel=1
pkgdesc="A PVR Client that connects Kodi to Stalker Middleware"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.stalker"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.stalker.tar.gz::https://github.com/kodi-pvr/pvr.stalker/archive/4d63c5e460aef2a681b11bb9f6a749ad578e7ea8.tar.gz")
sha512sums=('a1f9b2b0dea45ecd3d7b5a92076105d9cf19d13702f9f4aa83c12590030d11d4022ddaf85b52a0cba79b72418f1320c06542a17015c2e67730389e26fcb7be4e')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.stalker-4d63c5e460aef2a681b11bb9f6a749ad578e7ea8"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.stalker-4d63c5e460aef2a681b11bb9f6a749ad578e7ea8/build"
  make DESTDIR="$pkgdir" install
}
