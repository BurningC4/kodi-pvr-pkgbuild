# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-stalker
pkgbase=${pkgname}
pkgver=20.3.1
pkgrel=4
pkgdesc="A PVR Client that connects Kodi to Stalker Middleware"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.stalker"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.stalker.tar.gz::https://github.com/kodi-pvr/pvr.stalker/archive/8e73680688afbe1c6561d1738d86cb5e589681c3.tar.gz")
sha512sums=('a11d08b5b65671b2b95cc550666ceafe6c3c43eb49fbefccabadf368ac750a83dd8c207ec2ce32a6e3b5bdd1e72660df73c9c3128dee4db7db0f4025f9faaff2')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.stalker-8e73680688afbe1c6561d1738d86cb5e589681c3"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.stalker-8e73680688afbe1c6561d1738d86cb5e589681c3/build"
  make DESTDIR="$pkgdir" install
}
