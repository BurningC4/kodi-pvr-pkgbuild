# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-stalker
pkgbase=${pkgname}
pkgver=20.3.1
pkgrel=2
pkgdesc="A PVR Client that connects Kodi to Stalker Middleware"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.stalker"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.stalker.tar.gz::https://github.com/kodi-pvr/pvr.stalker/archive/edd2b6a181708cc6bb13af62a277d7b9d71bb581.tar.gz")
sha512sums=('e221bc9ae7c22f3bbc90a2857e88f14e7b30d9688564d043f24a3f1babfd7e2a7e5827a8ee13414d3f365b2712630f6d61ed89dec6fd8d34efbb5c81158336df')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.stalker-edd2b6a181708cc6bb13af62a277d7b9d71bb581"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.stalker-edd2b6a181708cc6bb13af62a277d7b9d71bb581/build"
  make DESTDIR="$pkgdir" install
}
