# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-stalker
pkgbase=${pkgname}
pkgver=20.3.1
pkgrel=1
pkgdesc="A PVR Client that connects Kodi to Stalker Middleware"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.stalker"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.stalker.tar.gz::https://github.com/kodi-pvr/pvr.stalker/archive/d0abe9d18f27beeed119becacee410078fc88dd2.tar.gz")
sha512sums=('9576d9e2761f999a9595f467773840a7de3e921ee8b41430927a766db81eb59756b8722064d3202377fd132c6d298e81fe05937040ecb80acdb8e031138496f5')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.stalker-d0abe9d18f27beeed119becacee410078fc88dd2"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.stalker-d0abe9d18f27beeed119becacee410078fc88dd2/build"
  make DESTDIR="$pkgdir" install
}
