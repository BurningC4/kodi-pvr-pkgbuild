# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-stalker
pkgbase=${pkgname}
pkgver=19.0.4
pkgrel=1
pkgdesc="A PVR Client that connects Kodi to Stalker Middleware"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.stalker"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.stalker.tar.gz::https://github.com/kodi-pvr/pvr.stalker/archive/37035cf9ef53636b35599153cac851b211c149df.tar.gz")
sha512sums=('e881dfb47323604b7460ff4689453f5f97aeedf4be4e2c72775aa2eca0c3cbf7b8823e9b6e9b30757442690a0c7982e936ef2a6f91c32b89115b950f948cb099')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.stalker-37035cf9ef53636b35599153cac851b211c149df"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.stalker-37035cf9ef53636b35599153cac851b211c149df/build"
  make DESTDIR="$pkgdir" install
}
