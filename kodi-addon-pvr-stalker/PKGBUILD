# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-stalker
pkgbase=${pkgname}
pkgver=19.0.3
pkgrel=3
pkgdesc="A PVR Client that connects Kodi to Stalker Middleware"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.stalker"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.stalker.tar.gz::https://github.com/kodi-pvr/pvr.stalker/archive/7bc88578b416a062881f07ba05c1c6f47a23dd4f.tar.gz")
sha512sums=('4087359a0b7fd9f6d77056f354b6c7017437451fbc7df8e3ee1a8441a5308d84e7c270c8a72f7b03b0a8da91a6cdc2508b7b9b1797704a39c5a5497c88e8b930')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.stalker-7bc88578b416a062881f07ba05c1c6f47a23dd4f"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.stalker-7bc88578b416a062881f07ba05c1c6f47a23dd4f/build"
  make DESTDIR="$pkgdir" install
}
