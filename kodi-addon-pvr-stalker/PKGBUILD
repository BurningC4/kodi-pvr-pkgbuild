# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-stalker
pkgbase=${pkgname}
pkgver=19.0.3
pkgrel=2
pkgdesc="A PVR Client that connects Kodi to Stalker Middleware"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.stalker"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.stalker.tar.gz::https://github.com/kodi-pvr/pvr.stalker/archive/749ac34e64f40cd5083868f9ba8ca05ba418df1b.tar.gz")
sha512sums=('3665226ec6e86760ce99efbbe010da25c2fabff109a5d61bb737e622696e057c553bc9be18347147770d94208cf71fa0878da891427a3f0e24a6ceb3b557e9c8')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.stalker-749ac34e64f40cd5083868f9ba8ca05ba418df1b"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.stalker-749ac34e64f40cd5083868f9ba8ca05ba418df1b/build"
  make DESTDIR="$pkgdir" install
}
