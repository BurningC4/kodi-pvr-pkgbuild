# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vbox
pkgbase=${pkgname}
pkgver=20.4.2
pkgrel=4
pkgdesc="Kodi VBox TV Gateway PVR addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vbox"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vbox.tar.gz::https://github.com/kodi-pvr/pvr.vbox/archive/b2d77c1c69debb29e6b88c56e953344b9e45beaf.tar.gz")
sha512sums=('e8e07259331eb5b1188a8ac533329e318e0a469327072dcd710728ff6944fcd864330b73d540420fe2e705f9db14dcfb5684c02e43106f1c2ed024f429855087')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vbox-b2d77c1c69debb29e6b88c56e953344b9e45beaf"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vbox-b2d77c1c69debb29e6b88c56e953344b9e45beaf/build"
  make DESTDIR="$pkgdir" install
}
