# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vbox
pkgbase=${pkgname}
pkgver=20.4.2
pkgrel=1
pkgdesc="Kodi VBox TV Gateway PVR addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vbox"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vbox.tar.gz::https://github.com/kodi-pvr/pvr.vbox/archive/a14fd4a1b9495cd59746ab63cd8fea2d3ae03dba.tar.gz")
sha512sums=('b846eadc6b21bcbec6b0096f5fcd358d1216ec91b4cb508d6ca870c93ae941bf468ff467325cbe6423c59e28ab5880b290331df197f312f6cbde0c94528fe1b7')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vbox-a14fd4a1b9495cd59746ab63cd8fea2d3ae03dba"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vbox-a14fd4a1b9495cd59746ab63cd8fea2d3ae03dba/build"
  make DESTDIR="$pkgdir" install
}
