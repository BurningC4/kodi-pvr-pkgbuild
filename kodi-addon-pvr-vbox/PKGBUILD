# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vbox
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=1
pkgdesc="Kodi VBox TV Gateway PVR addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vbox"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vbox.tar.gz::https://github.com/kodi-pvr/pvr.vbox/archive/6cabe58c1cff00191bec46e552df1e4837a4ea30.tar.gz")
sha512sums=('6b5be171ae2fe344cd742ab7e963b4876e9bba0309bf6613228ed3db5c2a39ed23135b819f256f03a6bf0a457bdc683eaefcc7a4aba3747e35575a9da80ed8ba')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vbox-6cabe58c1cff00191bec46e552df1e4837a4ea30"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vbox-6cabe58c1cff00191bec46e552df1e4837a4ea30/build"
  make DESTDIR="$pkgdir" install
}
