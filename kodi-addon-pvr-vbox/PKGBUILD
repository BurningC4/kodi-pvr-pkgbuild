# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vbox
pkgbase=${pkgname}
pkgver=19.0.0
pkgrel=2
pkgdesc="Kodi VBox TV Gateway PVR addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vbox"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vbox.tar.gz::https://github.com/kodi-pvr/pvr.vbox/archive/21a60f8116cb3062b5df17f55369d4af3dbfb1fc.tar.gz")
sha512sums=('87cc1a93cb3a7af1a07415cc71eee36275a4cdec35ff287d7c351082e1438836268f28e7086beeaf6b826464fa3fdecde24aa7e52c0325b7ff507d64e130b319')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vbox-21a60f8116cb3062b5df17f55369d4af3dbfb1fc"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vbox-21a60f8116cb3062b5df17f55369d4af3dbfb1fc/build"
  make DESTDIR="$pkgdir" install
}
