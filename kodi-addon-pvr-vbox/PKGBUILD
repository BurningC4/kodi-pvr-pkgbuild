# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vbox
pkgbase=${pkgname}
pkgver=19.0.0
pkgrel=3
pkgdesc="Kodi VBox TV Gateway PVR addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vbox"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vbox.tar.gz::https://github.com/kodi-pvr/pvr.vbox/archive/7ee6b08c700d8fff58cf3664390285458c01cc5b.tar.gz")
sha512sums=('0f5f36827be8dd8e31eb200a355ddeca3d3b93b428077cf7cdb228987e67cecf5c5117a04ab48fede7a649cdc2124ef00a361beb3cef7d73d476a2290f012746')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vbox-7ee6b08c700d8fff58cf3664390285458c01cc5b"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vbox-7ee6b08c700d8fff58cf3664390285458c01cc5b/build"
  make DESTDIR="$pkgdir" install
}
