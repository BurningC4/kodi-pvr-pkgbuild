# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vbox
pkgbase=${pkgname}
pkgver=20.4.2
pkgrel=1
pkgdesc="Kodi VBox TV Gateway PVR addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vbox"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vbox.tar.gz::https://github.com/kodi-pvr/pvr.vbox/archive/6a5097de3040200de5cc6540824b04e9a1a89d5d.tar.gz")
sha512sums=('1a6d5ecbabb9643420ac53c543c1173f8c06f28391b51fc617dca2d232c1e9939ab52add0623faea64754700df21446ea84df07959685e3a6055548cb3ff9d5c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vbox-6a5097de3040200de5cc6540824b04e9a1a89d5d"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vbox-6a5097de3040200de5cc6540824b04e9a1a89d5d/build"
  make DESTDIR="$pkgdir" install
}
