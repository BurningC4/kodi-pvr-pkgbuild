# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vbox
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=1
pkgdesc="Kodi VBox TV Gateway PVR addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vbox"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vbox.tar.gz::https://github.com/kodi-pvr/pvr.vbox/archive/cec073ede9c189b21209e37d29a4e9777984b893.tar.gz")
sha512sums=('7259605c7f11f9fabb18b5d003abc0476293469b0cbb8e3984a11f864d21f3796d755bc90cfd7ecb109400174504a98a79c0cfb7cdf09963fb897703346e5609')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vbox-cec073ede9c189b21209e37d29a4e9777984b893"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vbox-cec073ede9c189b21209e37d29a4e9777984b893/build"
  make DESTDIR="$pkgdir" install
}
