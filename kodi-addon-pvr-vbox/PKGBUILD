# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vbox
pkgbase=${pkgname}
pkgver=4.4.8
pkgrel=1
pkgdesc="Kodi VBox TV Gateway PVR addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vbox"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vbox.tar.gz::https://github.com/kodi-pvr/pvr.vbox/archive/ea20464ea7ea36b4c6163c8d74e589604023d01d.tar.gz")
sha512sums=('7cc5382278ff07cc5a1011385fb1ca474de98e9801019ebea116aef74ed1c36d7f60dbfa2c2cccee873aebb12ba8dd0b0e3ef5daddf8d32f3497facb9c72d92a')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vbox-ea20464ea7ea36b4c6163c8d74e589604023d01d"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vbox-ea20464ea7ea36b4c6163c8d74e589604023d01d/build"
  make DESTDIR="$pkgdir" install
}
