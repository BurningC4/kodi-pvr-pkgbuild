# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vbox
pkgbase=${pkgname}
pkgver=20.4.2
pkgrel=3
pkgdesc="Kodi VBox TV Gateway PVR addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vbox"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vbox.tar.gz::https://github.com/kodi-pvr/pvr.vbox/archive/7693705faac960336b9af12961f8fc4f808c297c.tar.gz")
sha512sums=('5e977fc72ddfb7ab3f42b0508055a4034fc3168ce8d32766c3074ceedea6a576a86d47b055948cfde173ca757bc29ae4567dc9bb403b0646623726d71e0528b2')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vbox-7693705faac960336b9af12961f8fc4f808c297c"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vbox-7693705faac960336b9af12961f8fc4f808c297c/build"
  make DESTDIR="$pkgdir" install
}
