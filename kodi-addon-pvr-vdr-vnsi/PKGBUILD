# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=8
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/85d75799931a957f644b3e3848a23790ff529872.tar.gz")
sha512sums=('9e41195da80f92925db828dc6607a8a4c4fe87dba0cfe1e4214e33bc34b5f9d71b40a09c33826ae2d2fa810699d8b93f425f4f7bf5429f46bd4daee412d92e7c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-85d75799931a957f644b3e3848a23790ff529872"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-85d75799931a957f644b3e3848a23790ff529872/build"
  make DESTDIR="$pkgdir" install
}
