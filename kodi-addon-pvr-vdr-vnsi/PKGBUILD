# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=2
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/daafc4928d0f251763cd65e49eb7aff08dc6f6c4.tar.gz")
sha512sums=('bf16db7521ea5e947404a00798f1d9cffae27f659d35ef4cbdb941fee836954ed5cc1ad4aefbc14f32fbd4ffa8e182de90af0237de37d4fce3347db7dddb02c4')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-daafc4928d0f251763cd65e49eb7aff08dc6f6c4"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-daafc4928d0f251763cd65e49eb7aff08dc6f6c4/build"
  make DESTDIR="$pkgdir" install
}
