# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=1
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/4864f348c4399dbeeda8271df09d09e0fdad2ce5.tar.gz")
sha512sums=('f8c8027c9dcb4b539205fb65612f5c3268ebfa58da000f4047d355669aeb5f24bd3ddf9d77b2d6ee52797729fe1db7b5a88be44e3b06100ea026c5384ecb41a0')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-4864f348c4399dbeeda8271df09d09e0fdad2ce5"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-4864f348c4399dbeeda8271df09d09e0fdad2ce5/build"
  make DESTDIR="$pkgdir" install
}
