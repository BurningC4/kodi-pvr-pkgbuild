# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=1
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/df0ddbefd839eb1b1efd9b6d5860342d2473fdd9.tar.gz")
sha512sums=('9c4bce7bcf4fecc2f7f1e3a6b5067357a10ea43a9a06efc902a2aabe971f38207a686b0fc07d721514371aa7ba865e0b0bbd8a4a6142b8cc26c2106ad268718a')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-df0ddbefd839eb1b1efd9b6d5860342d2473fdd9"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-df0ddbefd839eb1b1efd9b6d5860342d2473fdd9/build"
  make DESTDIR="$pkgdir" install
}
