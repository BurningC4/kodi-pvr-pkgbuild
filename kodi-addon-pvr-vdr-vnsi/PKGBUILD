# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=11
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/4fc51c38bd5b93265b42ebe553f89b54116497ab.tar.gz")
sha512sums=('881c8e7612df735f330c629165d7e2d04bbdf8c3f5c0de9589a3d3866c023ed8093236255c417827ee106061504d1cc224256d2035b7353849468880441e7270')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-4fc51c38bd5b93265b42ebe553f89b54116497ab"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-4fc51c38bd5b93265b42ebe553f89b54116497ab/build"
  make DESTDIR="$pkgdir" install
}
