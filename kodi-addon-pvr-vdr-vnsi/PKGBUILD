# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=1
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/df0ddbefd839eb1b1efd9b6d5860342d2473fdd9.tar.gz")
sha512sums=('ea74b9c9caad6ec99c56304b8c0a8bb07a0f3496e631b9d2ebcc8c91d55207a251c919fdab8449d8ffd7b386bd93a6fddee40c805e59a3d5c676b0a0c9f44bdb')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-df0ddbefd839eb1b1efd9b6d5860342d2473fdd9"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-df0ddbefd839eb1b1efd9b6d5860342d2473fdd9/build"
  make DESTDIR="$pkgdir" install
}
