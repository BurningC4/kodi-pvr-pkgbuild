# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=19.0.5
pkgrel=2
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/dec8a4240d2fd854d2d6e914b7e2982d52d45cb8.tar.gz")
sha512sums=('b3992ab63529aa4968263932c071053e93022cdb9868277932c1f5208ef0332d0006552b9ce97acf3aec13ae4d6cb97061843e3ed91bad5b6eaa223b426bf94a')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-dec8a4240d2fd854d2d6e914b7e2982d52d45cb8"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-dec8a4240d2fd854d2d6e914b7e2982d52d45cb8/build"
  make DESTDIR="$pkgdir" install
}
