# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=19.0.5
pkgrel=2
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/cbe7695520c2de970e1c9a7e1e415646f81f3f7f.tar.gz")
sha512sums=('c0fb8f2558b4ea4bba48b0906319fe4585592088517b620150c78a9bdda0d75165de3ff3cebaab92a906e76b98619318f3a037224b26b90c58e8278f53d66622')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-cbe7695520c2de970e1c9a7e1e415646f81f3f7f"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-cbe7695520c2de970e1c9a7e1e415646f81f3f7f/build"
  make DESTDIR="$pkgdir" install
}
