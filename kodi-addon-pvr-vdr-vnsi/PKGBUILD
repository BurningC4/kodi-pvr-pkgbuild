# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=10
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/36e7dcfb0e7b86cb1b8d8a0889edfcd16ad4fbd4.tar.gz")
sha512sums=('b54f3ae240602739ddeec4d4c021540379b1f5c2feaf148c19b00f44adb20b96931cb001ad7d596595915d3741070c577876ff2a40bb2225aeba9c254ed658e7')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-36e7dcfb0e7b86cb1b8d8a0889edfcd16ad4fbd4"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-36e7dcfb0e7b86cb1b8d8a0889edfcd16ad4fbd4/build"
  make DESTDIR="$pkgdir" install
}
