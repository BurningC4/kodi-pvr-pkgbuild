# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=3
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/1f56ebed94d1e5b6b19cd4c76e8393cfd81625f0.tar.gz")
sha512sums=('8eb1abeaeaf8f1a9004e8d225f813d192a840b767eecadf7214f3a674fdee11bf6460f72ad156c1c9c6aaddd572e7bd6e933bae0c69740d528623f6ada509489')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-1f56ebed94d1e5b6b19cd4c76e8393cfd81625f0"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-1f56ebed94d1e5b6b19cd4c76e8393cfd81625f0/build"
  make DESTDIR="$pkgdir" install
}
