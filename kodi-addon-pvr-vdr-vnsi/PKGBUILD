# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=2
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/ac053c6fc6c937c88a4f7993575f68d8e6fddc45.tar.gz")
sha512sums=('6aded6cbfce6828e15eb15a47edf5d53b068765a37fb3f013af752ba2e71e654a03d6e04447cf8f544614f1af2da347687d5ca33751481f3416256f853dff3b7')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-ac053c6fc6c937c88a4f7993575f68d8e6fddc45"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-ac053c6fc6c937c88a4f7993575f68d8e6fddc45/build"
  make DESTDIR="$pkgdir" install
}
