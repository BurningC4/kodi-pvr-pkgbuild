# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=5
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/bc23b66fc5439b0c6a781e87ec27ed5bfea83800.tar.gz")
sha512sums=('79aca7105862c55ff723a632a2336b88394acfd72b5f8e1020acf0c9d706156fea33664d0b4587ba19f50653d0e48ffa84f3fd1a7366f5f22313264616425dd4')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-bc23b66fc5439b0c6a781e87ec27ed5bfea83800"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-bc23b66fc5439b0c6a781e87ec27ed5bfea83800/build"
  make DESTDIR="$pkgdir" install
}
