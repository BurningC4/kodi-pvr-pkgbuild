# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=3.6.3
pkgrel=1
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/9e4d93afdc2673850e93d5945f2f7f98ef023dbd.tar.gz")
sha512sums=('70defd06b2e77f1fb8cefdbae0623b81ecd12e5e3f392a53ee6902dc9eb5fdb2360237c0b4d71c3db4bdc714767c4abea363b77e8a67a823ffcdd57585549f5a')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-9e4d93afdc2673850e93d5945f2f7f98ef023dbd"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-9e4d93afdc2673850e93d5945f2f7f98ef023dbd/build"
  make DESTDIR="$pkgdir" install
}
