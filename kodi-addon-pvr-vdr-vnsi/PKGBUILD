# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.0
pkgrel=3
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/ea145dfb7afc8db2444033c63b2327ec2ae56ddc.tar.gz")
sha512sums=('47ce84ec185d403f7ade14ba2bb6db972392e31b6472ff6125120cbb63de2307843ad698d0f6edb1ac4542b087f330b4cd0a47862da67444ce7490ec0e0546d5')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-ea145dfb7afc8db2444033c63b2327ec2ae56ddc"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-ea145dfb7afc8db2444033c63b2327ec2ae56ddc/build"
  make DESTDIR="$pkgdir" install
}
