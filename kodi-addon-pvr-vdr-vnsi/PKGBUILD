# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vdr-vnsi
pkgbase=${pkgname}
pkgver=20.4.1
pkgrel=9
pkgdesc="Kodi PVR addon VNSI"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vdr.vnsi"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vdr.vnsi.tar.gz::https://github.com/kodi-pvr/pvr.vdr.vnsi/archive/04008c04bf4491a329cdaeb7de82fb2835b12275.tar.gz")
sha512sums=('d87bb8d98c2be2eac7ab75bbcabdf9cd238f5dd80f8396cd98cf9f7051eaedb6bf67a7a9db54a83e9eae58c1c37cf8c5e10cfbccb875d17130bfb4d5c24b971c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vdr.vnsi-04008c04bf4491a329cdaeb7de82fb2835b12275"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vdr.vnsi-04008c04bf4491a329cdaeb7de82fb2835b12275/build"
  make DESTDIR="$pkgdir" install
}
