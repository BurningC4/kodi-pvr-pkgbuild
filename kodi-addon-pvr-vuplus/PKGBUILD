# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.5.1
pkgrel=3
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/2f88013f3776f0dd4b54ef8b2af1549d2a5e06cc.tar.gz")
sha512sums=('599f0b570600259dbde960f1fe21cc5f327fac06cdb49907423758a275be5b8f53175da6990a20118d5e329168014c42ca31083743f9384d3c20a0a32d4674fe')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-2f88013f3776f0dd4b54ef8b2af1549d2a5e06cc"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-2f88013f3776f0dd4b54ef8b2af1549d2a5e06cc/build"
  make DESTDIR="$pkgdir" install
}
