# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=19.0.0
pkgrel=3
pkgdesc="Kodi's VuPlus client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/4298dcfd027a6b979d7dcc1e7f6152104790e2ec.tar.gz")
sha512sums=('0cb1e054830ba6e5223e9b10a859f75f1b03c26f0752bfa367cacbf05930c94adf7c35cd033c12f955ec81a4915aa4e5628c7bc71f70e61d04aa332584e7017f')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-4298dcfd027a6b979d7dcc1e7f6152104790e2ec"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-4298dcfd027a6b979d7dcc1e7f6152104790e2ec/build"
  make DESTDIR="$pkgdir" install
}
