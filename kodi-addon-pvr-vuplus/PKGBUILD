# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.5.1
pkgrel=9
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/1f67d6f0a47df30aa57ea9cf9bcc48bdca84ed89.tar.gz")
sha512sums=('001e3fa91bf32e09339afd6ba22f9985a0003e4eebeb5fd9fbfee98afdf1102efb2f47bfec063ba70f006e453e1b1ae6f243b1692c8064e13d563869e2bb0e50')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-1f67d6f0a47df30aa57ea9cf9bcc48bdca84ed89"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-1f67d6f0a47df30aa57ea9cf9bcc48bdca84ed89/build"
  make DESTDIR="$pkgdir" install
}
