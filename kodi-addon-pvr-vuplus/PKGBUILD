# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.5.1
pkgrel=10
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/650bbf9d05c346804d5c5f4461b47a7bbb07e661.tar.gz")
sha512sums=('487010ea2963f5e8146b4d904c7c73f77a8c4f2a930c30ef594ed7efe04631faba771bbf64dea3fac9d1b98225209a0b0ffdade49529a7be466287a7ea57e49f')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-650bbf9d05c346804d5c5f4461b47a7bbb07e661"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-650bbf9d05c346804d5c5f4461b47a7bbb07e661/build"
  make DESTDIR="$pkgdir" install
}
