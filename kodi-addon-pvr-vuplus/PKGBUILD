# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.5.1
pkgrel=8
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/36b5eb50095c9a37aabc9ea021f789a1bcc5cc61.tar.gz")
sha512sums=('c0f543bc05b20bef2064b373cd8572b6283884ac98bc5d9419062828dd24de7f2134ee86e286dc7460a0ccc65f8d8e25b1797663445106b9a4d529737b494c2b')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-36b5eb50095c9a37aabc9ea021f789a1bcc5cc61"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-36b5eb50095c9a37aabc9ea021f789a1bcc5cc61/build"
  make DESTDIR="$pkgdir" install
}
