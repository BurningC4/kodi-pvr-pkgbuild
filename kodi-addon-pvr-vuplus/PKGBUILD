# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=19.0.0
pkgrel=7
pkgdesc="Kodi's VuPlus client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/382e1df33b7f9415b0eaff095e3383ed6ecbba78.tar.gz")
sha512sums=('335155f55248b8a83f2e696770bcd7cdefbf30ebc153f5385be8271bd252f4b88440d1682014b7f6ccdcf4190e1a5378be7e38c424c2a48b10f2da4202908db1')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-382e1df33b7f9415b0eaff095e3383ed6ecbba78"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-382e1df33b7f9415b0eaff095e3383ed6ecbba78/build"
  make DESTDIR="$pkgdir" install
}
