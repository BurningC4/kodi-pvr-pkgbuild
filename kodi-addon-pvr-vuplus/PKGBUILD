# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=19.0.0
pkgrel=1
pkgdesc="Kodi's VuPlus client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/edbdac2ef43e718586918dc2d855e5874836e976.tar.gz")
sha512sums=('ee24b056805d171ba6806d263ebc7026529e82fe331b540aae81e7adf9d4df2fba091e9cf8190036fb8691e255f890392e144f3d83277ba1d62fecb71a32bb9f')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-edbdac2ef43e718586918dc2d855e5874836e976"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-edbdac2ef43e718586918dc2d855e5874836e976/build"
  make DESTDIR="$pkgdir" install
}
