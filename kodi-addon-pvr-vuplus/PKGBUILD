# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.5.0
pkgrel=1
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/e23c53bd41e421abdaf838b023882d0a8f4c06ea.tar.gz")
sha512sums=('be0f3299244e132a5703faceadd6b6481bb84d1e9e0a99e17614a59c39f8b70e878759a0d81238da55f3a5cb28a55e8506622543753d6ca73971d732898acbbb')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-e23c53bd41e421abdaf838b023882d0a8f4c06ea"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-e23c53bd41e421abdaf838b023882d0a8f4c06ea/build"
  make DESTDIR="$pkgdir" install
}
