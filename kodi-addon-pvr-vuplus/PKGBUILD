# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.5.1
pkgrel=1
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/bffe2c3c17a1ffad00672ca739119481de641673.tar.gz")
sha512sums=('c5a508500c5965f9daedd56996e0fce25008fc561a522859a19480bbc4c120081195fc51d4a0eb47f1e4e2086bb23e092b6f2827f2c5367d6348b84a2a3f8f15')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-bffe2c3c17a1ffad00672ca739119481de641673"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-bffe2c3c17a1ffad00672ca739119481de641673/build"
  make DESTDIR="$pkgdir" install
}
