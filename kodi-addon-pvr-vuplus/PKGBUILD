# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.5.1
pkgrel=6
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/d97c611fab2ce99d5e33e36a2e6d95d67e561f28.tar.gz")
sha512sums=('85a1794ee40480e5129bdcf2e86cfb4f8ebf5fa186cdc26e803f93ec70a3987deac877ad871877f41edb0b1e1d4f98920c6138e4f151c2ff69ed2c6e7a916cb5')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-d97c611fab2ce99d5e33e36a2e6d95d67e561f28"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-d97c611fab2ce99d5e33e36a2e6d95d67e561f28/build"
  make DESTDIR="$pkgdir" install
}
