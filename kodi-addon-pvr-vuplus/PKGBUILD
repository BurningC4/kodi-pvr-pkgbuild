# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=19.0.0
pkgrel=6
pkgdesc="Kodi's VuPlus client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/3e9a5481e7a8fd436e76a2a384694d5c969f15b3.tar.gz")
sha512sums=('f0cfb77d1e24484a1b75dc60d492e224006101b7facc131f95a83f7477851b4c040f53671a394f4ddc7270da3a78b7021a91901cb1d4bd849a023dae20c36fd5')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-3e9a5481e7a8fd436e76a2a384694d5c969f15b3"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-3e9a5481e7a8fd436e76a2a384694d5c969f15b3/build"
  make DESTDIR="$pkgdir" install
}
