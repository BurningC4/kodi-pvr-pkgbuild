# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=3.22.0
pkgrel=1
pkgdesc="Kodi's VuPlus client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/4f0de0e34e5f4b74ddcc25aa33f224db0e7fcfbe.tar.gz")
sha512sums=('eb385dc094535e6702554346fc5504a82694c1864b7cc37e2c0ba78ed77c5c5255b21318f2a95bc7d21107e76ae2ee5c22e088cf20b2201e1df662202debc8f1')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-4f0de0e34e5f4b74ddcc25aa33f224db0e7fcfbe"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-4f0de0e34e5f4b74ddcc25aa33f224db0e7fcfbe/build"
  make DESTDIR="$pkgdir" install
}
