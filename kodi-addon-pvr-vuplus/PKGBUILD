# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=19.0.0
pkgrel=2
pkgdesc="Kodi's VuPlus client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/8a0c74dd59d3d411ec02e0e296e0c8c7f1d488d1.tar.gz")
sha512sums=('0bca5e53cbf55744fff32e83677d8bcc120272fcf5a01bb92512332821fc5dd277915e1ed64e5284c3a81e6f6bb13eb2a02d6a12261feb02dc6f6ec6adf8fc6e')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-8a0c74dd59d3d411ec02e0e296e0c8c7f1d488d1"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-8a0c74dd59d3d411ec02e0e296e0c8c7f1d488d1/build"
  make DESTDIR="$pkgdir" install
}
