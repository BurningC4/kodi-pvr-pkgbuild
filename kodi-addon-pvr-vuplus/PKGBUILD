# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.5.1
pkgrel=2
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/4d191d6b685a055e9326c3027b92240b0eee53e4.tar.gz")
sha512sums=('bb1d6a6d8fdb699ab0dbe91803193a0bc59e465e54a6ef33a57ce512c1181d7b574126c86fae5cd201bc30190014d60c61ba00872f3a73cf75840adbc77f51a2')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-4d191d6b685a055e9326c3027b92240b0eee53e4"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-4d191d6b685a055e9326c3027b92240b0eee53e4/build"
  make DESTDIR="$pkgdir" install
}
