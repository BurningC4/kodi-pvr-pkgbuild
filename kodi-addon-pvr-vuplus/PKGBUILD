# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.4.2
pkgrel=1
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/10bed85023bc490997350b971297d7907f39aadf.tar.gz")
sha512sums=('0f48e04d9fc8b959a0cc2da5c74708fbf854faa905a645869876301ec1b7a3e164d2618b6395f30c4b582bef5f2886e75b51ac902c41a507303d232f1437c48b')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-10bed85023bc490997350b971297d7907f39aadf"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-10bed85023bc490997350b971297d7907f39aadf/build"
  make DESTDIR="$pkgdir" install
}
