# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.4.2
pkgrel=1
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/10bed85023bc490997350b971297d7907f39aadf.tar.gz")
sha512sums=('aac10308ed61b39599aa38a4267319451f9e60b055a6a9fee0ff2653041910339a59fa3edba045f8b81c0a9e417353c4523517400c04d01db463b83c1da2e676')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-10bed85023bc490997350b971297d7907f39aadf"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-10bed85023bc490997350b971297d7907f39aadf/build"
  make DESTDIR="$pkgdir" install
}
