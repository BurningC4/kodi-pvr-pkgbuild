# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=20.5.1
pkgrel=7
pkgdesc="Kodi's Enigma2 client add-on"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/750fed7cb11d7c3d98ecb3258e1761648897054c.tar.gz")
sha512sums=('78cf18fb5035e8d25c4476539ce7067caf2de11bd62bbe7c79f60dacfa10863103bfaffff7af6bd51a43b1e653cf416cd2559a23dbc55fac9de317e4e9e0e10c')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-750fed7cb11d7c3d98ecb3258e1761648897054c"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-750fed7cb11d7c3d98ecb3258e1761648897054c/build"
  make DESTDIR="$pkgdir" install
}
