# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=19.0.1
pkgrel=1
pkgdesc="Kodi's VuPlus client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/401d009fa4afc64b9cdd3db2801a4b6a3a937590.tar.gz")
sha512sums=('8d688ac22fb710c4c41a9142ad56b834ec649ba6e3eb29ba6a804a8480d82eb7f0e340a9d85c45edc9124a0305e0bd358a1a7aaac2b6a4371376787931e8894b')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-401d009fa4afc64b9cdd3db2801a4b6a3a937590"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-401d009fa4afc64b9cdd3db2801a4b6a3a937590/build"
  make DESTDIR="$pkgdir" install
}
