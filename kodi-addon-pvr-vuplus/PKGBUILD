# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-vuplus
pkgbase=${pkgname}
pkgver=19.0.0
pkgrel=4
pkgdesc="Kodi's VuPlus client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.vuplus"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.vuplus.tar.gz::https://github.com/kodi-pvr/pvr.vuplus/archive/f0896cffe7a9532b3426f3b97c5df27e3be77cdb.tar.gz")
sha512sums=('193c3a1af6614497af73bab3f9cd0cce1d5e8ba2a01e00e4a574b5aa1bdf3d651f0d8098783bcd7eb92417033f452bed3b1b2b0b9c3a1a1cc7fdc4218a621f50')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.vuplus-f0896cffe7a9532b3426f3b97c5df27e3be77cdb"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.vuplus-f0896cffe7a9532b3426f3b97c5df27e3be77cdb/build"
  make DESTDIR="$pkgdir" install
}
