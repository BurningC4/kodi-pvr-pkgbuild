# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-wmc
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Kodi's Windows Media Center client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.wmc"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.wmc.tar.gz::https://github.com/kodi-pvr/pvr.wmc/archive/f5d46166771712bc373590994270a7039bd51756.tar.gz")
sha512sums=('cc79757ef1f88905072c184535442c7aaf7e5f095da0529defd634e698e5e00b7a20503b75b95c5b5fe265d4294774737c109bcd94db65e9fe796f27f9e38e75')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.wmc-f5d46166771712bc373590994270a7039bd51756"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.wmc-f5d46166771712bc373590994270a7039bd51756/build"
  make DESTDIR="$pkgdir" install
}
