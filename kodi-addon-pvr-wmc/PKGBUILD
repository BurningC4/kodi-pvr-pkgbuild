# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-wmc
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=2
pkgdesc="Kodi's Windows Media Center client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.wmc"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.wmc.tar.gz::https://github.com/kodi-pvr/pvr.wmc/archive/e04770acdf34884dda317d2834ed48e4a0a62f30.tar.gz")
sha512sums=('5d92e792b933b62d45c4e241370c50d645f9a66f71d2f8f260e72ae6e262f8c94cbaf6a8f23f387483dba574a4a0c98e847f47b1a7dc46b3d5c8b47596c58c18')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.wmc-e04770acdf34884dda317d2834ed48e4a0a62f30"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.wmc-e04770acdf34884dda317d2834ed48e4a0a62f30/build"
  make DESTDIR="$pkgdir" install
}
