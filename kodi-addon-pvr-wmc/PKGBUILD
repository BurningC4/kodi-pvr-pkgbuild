# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-wmc
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=1
pkgdesc="Kodi's Windows Media Center client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.wmc"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.wmc.tar.gz::https://github.com/kodi-pvr/pvr.wmc/archive/9dd570bf582df4dd9f5bf96a05377f834d7eed13.tar.gz")
sha512sums=('ab7705aced4a10a48b2a91d02de02983aec19581277d246ac9e210063b9097152c1d5bbaa17d4b9dc3f0af2df1f86d4091c1f5b6d74529ed42b42e282603ef9f')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.wmc-9dd570bf582df4dd9f5bf96a05377f834d7eed13"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.wmc-9dd570bf582df4dd9f5bf96a05377f834d7eed13/build"
  make DESTDIR="$pkgdir" install
}
