# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-wmc
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=5
pkgdesc="Kodi's Windows Media Center client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.wmc"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.wmc.tar.gz::https://github.com/kodi-pvr/pvr.wmc/archive/b7f41a0cee2761b4995f2cc8300fad13386acadd.tar.gz")
sha512sums=('5eec56c40f2676a2155b38bfaec62bbea8e48427f6f0a4a34b73374c4acc9959d968f2e949ab3b263c6282f85da32a6fdb65d616a8213b0a67bd6a3c5b598833')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.wmc-b7f41a0cee2761b4995f2cc8300fad13386acadd"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.wmc-b7f41a0cee2761b4995f2cc8300fad13386acadd/build"
  make DESTDIR="$pkgdir" install
}
