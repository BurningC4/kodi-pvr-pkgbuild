# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-wmc
pkgbase=${pkgname}
pkgver=19.0.2
pkgrel=2
pkgdesc="Kodi's Windows Media Center client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.wmc"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.wmc.tar.gz::https://github.com/kodi-pvr/pvr.wmc/archive/4edf2f9ee1737663224ac100c06cd349776a87c3.tar.gz")
sha512sums=('5258a46c1d22ae1320e65c44f53da0b3c3e0ce1d6a5d0310d01248c0194e2e3c2848b4335b13258e2b6a47d29d2ff675371656018afdd2ca774f6b798f605d11')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.wmc-4edf2f9ee1737663224ac100c06cd349776a87c3"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.wmc-4edf2f9ee1737663224ac100c06cd349776a87c3/build"
  make DESTDIR="$pkgdir" install
}
