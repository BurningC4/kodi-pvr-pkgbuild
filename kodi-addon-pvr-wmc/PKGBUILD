# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-wmc
pkgbase=${pkgname}
pkgver=2.4.4
pkgrel=1
pkgdesc="Kodi's Windows Media Center client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.wmc"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.wmc.tar.gz::https://github.com/kodi-pvr/pvr.wmc/archive/7b28be39bf8e71c1366a37c86d7b669689ce1691.tar.gz")
sha512sums=('69edd9038d8d5b2964095ce0007064ed9b8986e518b8802d4c69f65ca397b7f9851cbc37b304b67312cedb66d1c56df0eef6ec1e13e47dcc799473cce6f2ec8e')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.wmc-7b28be39bf8e71c1366a37c86d7b669689ce1691"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.wmc-7b28be39bf8e71c1366a37c86d7b669689ce1691/build"
  make DESTDIR="$pkgdir" install
}
