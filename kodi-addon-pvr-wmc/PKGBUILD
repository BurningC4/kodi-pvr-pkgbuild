# Maintainer: BurningC4 <wangweichen1995@hotmail.com>

pkgname=kodi-addon-pvr-wmc
pkgbase=${pkgname}
pkgver=20.3.0
pkgrel=4
pkgdesc="Kodi's Windows Media Center client addon"
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/kodi-pvr/pvr.wmc"
license=('GPL')
groups=('kodi-addons')
makedepends=('cmake' 'kodi-platform' 'git' 'kodi-dev')
depends=('kodi' 'p8-platform')
source=("pvr.wmc.tar.gz::https://github.com/kodi-pvr/pvr.wmc/archive/c71358d080c3ac3ee1ffc2b0d9d972d324a216a0.tar.gz")
sha512sums=('cdf510b96605833dd1fc248d2622e094adf17f803341420e5762f53325f3e93baf3f514f0b02a3d372b6297d9674314fc0d3830a9bfa35fd833d1e7ffea1bcf4')

_prefix='/usr'

build() {
  msg "Starting make..."

  cd "$srcdir/pvr.wmc-c71358d080c3ac3ee1ffc2b0d9d972d324a216a0"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=$_prefix \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "$srcdir/pvr.wmc-c71358d080c3ac3ee1ffc2b0d9d972d324a216a0/build"
  make DESTDIR="$pkgdir" install
}
